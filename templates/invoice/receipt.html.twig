{% set logo = asset('media/logo.jpeg') %}
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Reçu - {{ receiptNumber }}</title>
  <style>
    body{ font-family: DejaVu Sans, Arial, sans-serif; font-size:12px; color:#111; }
    .wrap{ width: 100%; }
    .header{ display:flex; justify-content:space-between; align-items:center; border-bottom:1px solid #ddd; padding-bottom:8px; margin-bottom:12px; }
    .brand{ font-weight:700; font-size:18px; }
    .infos{ margin-top:8px; }
    .grid{ display:flex; gap:24px; }
    .col{ flex:1; }
    .table{ width:100%; border-collapse:collapse; margin-top:10px; }
    .table th, .table td{ border:1px solid #e5e7eb; padding:6px 8px; text-align:left; }
    .total{ text-align:right; font-weight:700; }
    .muted{ color:#6b7280; }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="header">
      <div class="brand">BINAJIA — Reçu</div>
      <div>
        <img src="{{ logo }}" alt="Logo" style="height:40px;width:auto;object-fit:contain;"/>
      </div>
    </div>

    <div class="infos">
      <div class="grid">
        <div class="col">
          <div><strong>Client</strong></div>
          <div>{{ user.firstname }} {{ user.lastname }}</div>
          <div class="muted">{{ user.email }}</div>
          {% if user.phone %}<div class="muted">{{ user.phone }}</div>{% endif %}
        </div>
        <div class="col">
          <div><strong>N° de reçu</strong>: {{ receiptNumber }}</div>
          <div>Date d'émission: {{ issuedAt|date('d/m/Y H:i') }}</div>
          <div>Transaction: {{ payment.reference }}</div>
          <div>Statut: {{ payment.status|capitalize }}</div>
        </div>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>Description</th>
          <th>Montant (XOF)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Adhésion Binajia</td>
          <td style="width:160px;">{{ payment.amount ?? '0.00' }}</td>
        </tr>
        <tr>
          <td class="total">Total</td>
          <td class="total">{{ payment.amount ?? '0.00' }}</td>
        </tr>
      </tbody>
    </table>

    <p class="muted" style="margin-top:12px;">Merci pour votre confiance. Conservez ce reçu pour vos dossiers.</p>
  </div>
</body>
</html>

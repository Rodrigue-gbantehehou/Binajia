        class="bg-gradient-to-br from-secondary-dark to-gray-900 text-white py-12 px-4 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')]"
        style="background: linear-gradient(135deg, #005731, #0d5c26);">
						<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
							<div class="grid md:grid-cols-5 gap-12 mb-12">
								<div>
                    <h3 class="text-xl font-bold mb-4 flex items-center">
                        <img src="https://huggingface.co/spaces/Babangida77/binajia/resolve/main/images/binajia%20logo.jpg"
                            alt="Binajia Logo" class="h-8 w-8 mr-2 ">
                        <span
                            class="text-white bg-gradient-to-r from-green-500 to-green-700 px-3 py-1 rounded-full shadow-md">
                            B<span class="text-green-200">I</span>NAJ<span class="text-green-300">I</span>A
                        </span>
                    </h3>
                    <p class="text-gray-400">Promouvoir les échanges culturels et économiques entre le Bénin et le
                        Nigeria.</p>
                </div>
								<div>
									<h4 class="font-semibold text-lg mb-4">Navigation</h4>
									<ul class="space-y-2">
										<li>
											<a href="{{ path('app_home') }}" class="text-gray-400 hover:text-white transition-colors">Accueil </a>
										</li>
										<li>
											<a href="{{ path('app_avantage') }}" class="text-gray-400 hover:text-white transition-colors">Explorer</a>
										</li>
										<li>
											<a href="{{ path('app_social_impact') }}" class="text-gray-400 hover:text-white transition-colors">Impact Social</a>
										</li>
										<li>
											<a href="{{ path('app_events') }}" class="text-gray-400 hover:text-white transition-colors">Événements</a>
										</li>
										<li>
											<a href="{{ path('app_about') }}" class="text-gray-400 hover:text-white transition-colors">À propos</a>
										</li>
										<li>
											<a href="{{ path('app_places') }}" class="text-gray-400 hover:text-white transition-colors">Lieux</a>
										</li>
										<li>
											<a href="{{ path('app_contact') }}" class="text-gray-400 hover:text-white transition-colors">Contact</a>
										</li>
									</ul>
								</div>
								<div>
									<h4 class="font-semibold text-lg mb-4">Services</h4>
									<ul class="space-y-2">
										<li>
											<a href="#" class="text-gray-400 hover:text-white transition-colors">Réservations</a>
										</li>
										<li>
											<a href="{{ path('app_membership') }}" class="text-gray-400 hover:text-white transition-colors">Devenir membre</a>
										</li>
										
										<li>
											<a href="{{ path('app_partenaire') }}" class="text-gray-400 hover:text-white transition-colors">Partenariats</a>
										</li>
									</ul>
								</div>
								<div>
									<h4 class="font-semibold text-lg mb-4">Newsletter</h4>
									<p class="text-gray-400 mb-4">Restez informé de nos actualités</p>
									<div class="flex">
										<input type="email" placeholder="Votre email" class="flex-1 px-4 py-2 rounded-l-full bg-white/10 border border-white/20 focus:outline-none focus:border-primary">
										<button class="px-6 py-2 bg-primary rounded-r-full hover:bg-primary-dark transition-colors">→</button>
									</div>
								</div>
							</div>
							<div class="pt-8 border-t border-white/10 text-center text-gray-400">
								<p>&copy;
									{{ "now"|date('Y') }}
									BINAJIA. Tous droits réservés.</p>
							</div>
						</div>
					</footer>
				{% endblock %}

				{% block scripts %}
					<script src="{{ asset('js/app.js') }}" defer></script>
				{% endblock %}
			</body>
	</html>

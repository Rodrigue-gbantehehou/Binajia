									<li>
										<a href="{{ path('app_membership') }}" class="text-white hover:text-green-400 transition-colors flex items-center text-sm sm:text-base {% if app.request.attributes.get('_route') == 'app_membership' %}font-bold text-green-400{% endif %}">
											Devenir membre

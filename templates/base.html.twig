					<a href="{{ path('app_explorer') }}" class="block text-white hover:text-green-500 font-medium text-lg py-3 px-4 rounded-full hover:bg-cream transition-all nav-link-mobile {% if app.request.attributes.get('_route') == 'app_explorer' %}active{% endif %}">Explorer</a>
					<a href="{{ path('app_social_impact') }}" class="block text-white hover:text-green-500 font-medium text-lg py-3 px-4 rounded-full hover:bg-cream transition-all nav-link-mobile {% if app.request.attributes.get('_route') == 'app_social_impact' %}active{% endif %}">Impact Social</a>
					<a href="{{ path('app_events') }}" class="block text-white hover:text-green-500 font-medium text-lg py-3 px-4 rounded-full hover:bg-cream transition-all nav-link-mobile {% if app.request.attributes.get('_route') == 'app_events' %}active{% endif %}">Événements</a>
					<a href="{{ path('app_about') }}" class="block text-white hover:text-green-500 font-medium text-lg py-3 px-4 rounded-full hover:bg-cream transition-all nav-link-mobile {% if app.request.attributes.get('_route') == 'app_about' %}active{% endif %}">A propos</a>
					<a href="{{ path('app_contact') }}" class="block text-white hover:text-green-500 font-medium text-lg py-3 px-4 rounded-full hover:bg-cream transition-all nav-link-mobile {% if app.request.attributes.get('_route') == 'app_contact' %}active{% endif %}">Contact</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('admin_dashboard') }}" class="block text-white hover:text-green-500 font-medium text-lg py-3 px-4 rounded-full hover:bg-cream transition-all nav-link-mobile {% if app.request.attributes.get('_route') == 'admin_dashboard' %}active{% endif %}">Admin</a>
					{% endif %}
					<div class="pt-4 space-y-3">
						{% if not app.user %}
							<a href="{{ path('app_membership') }}" class="block w-full px-6 py-3 text-center bg-primary hover:bg-secondary text-white rounded-full font-medium transition duration-300 nav-link-mobile {% if app.request.attributes.get('_route') == 'app_membership' %}active{% endif %}">Devenir membre</a>

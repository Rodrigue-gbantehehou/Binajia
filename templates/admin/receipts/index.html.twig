{% extends 'admin/base.html.twig' %}

{% block title %}Reçus{% endblock %}

{% block admin_body %}
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-2xl font-bold">Reçus</h1>
    </div>

    <div class="overflow-x-auto rounded-xl ring-1 ring-gray-200 bg-white">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">N° reçu</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Montant</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Réf. Paiement</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Membre</th>
            <th class="px-4 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {% for r in receipts %}
            <tr>
              <td class="px-4 py-3">{{ r.receiptNumber }}</td>
              <td class="px-4 py-3">{{ r.issuedDate ? r.issuedDate|date('d/m/Y H:i') : '—' }}</td>
              <td class="px-4 py-3">{{ r.payment ? r.payment.amount : '—' }}</td>
              <td class="px-4 py-3">{{ r.payment ? r.payment.reference : '—' }}</td>
              <td class="px-4 py-3">{{ r.payment and r.payment.user ? (r.payment.user.firstname ~ ' ' ~ r.payment.user.lastname) : '—' }}</td>
              <td class="px-4 py-3 text-right">
                {% if r.pdfurl %}
                  <a class="btn" href="{{ path('admin_receipts_download', {id: r.id}) }}">Télécharger</a>
                {% endif %}
              </td>
            </tr>
          {% else %}
            <tr><td colspan="6" class="px-4 py-6 text-center text-gray-500">Aucun reçu</td></tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="flex items-center justify-between mt-4">
      <div class="text-sm text-gray-600">Total: {{ total }}</div>
      <div class="flex items-center gap-2">
        {% set prev = page > 1 ? page - 1 : 1 %}
        {% set next = page < pages ? page + 1 : pages %}
        <a class="btn" href="?page=1&size={{ size }}">«</a>
        <a class="btn" href="?page={{ prev }}&size={{ size }}">Préc.</a>
        <span class="px-3">Page {{ page }} / {{ pages }}</span>
        <a class="btn" href="?page={{ next }}&size={{ size }}">Suiv.</a>
        <a class="btn" href="?page={{ pages }}&size={{ size }}">»</a>
      </div>
    </div>
{% endblock %}

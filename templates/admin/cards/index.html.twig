{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Cartes{% endblock %}

{% block admin_body %}
  <div class="space-y-6">
    {# Header Section #}
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
      <div>
        <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">
          <i class="fas fa-id-card text-orange-500 mr-2"></i>Gestion des Cartes
        </h1>
        <p class="text-sm md:text-base text-gray-600">Gérez les cartes de membre et leur statut</p>
      </div>
      <div class="flex items-center gap-2 md:gap-3">
        <button class="inline-flex items-center gap-2 px-4 md:px-6 py-2 md:py-3 text-sm md:text-base rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500">
          <i class="fas fa-download"></i>
          <span class="hidden sm:inline">Exporter</span>
        </button>
        <a href="{{ path('admin_cards_new') }}" class="inline-flex items-center gap-2 px-4 md:px-6 py-2 md:py-3 text-sm md:text-base rounded-xl font-semibold transition-all duration-300 bg-gradient-to-r from-green-600 to-orange-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl">
          <i class="fas fa-plus"></i>
          <span class="hidden sm:inline">Nouvelle Carte</span>
        </a>
      </div>
    </div>

    {# Quick Stats #}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
      <div class="bg-white rounded-2xl shadow-lg border border-green-100 p-4 md:p-6 relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-green-200 bg-gradient-to-br from-green-50 to-green-100 border-l-4 border-green-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 md:w-12 md:h-12 bg-green-500 rounded-lg flex items-center justify-center">
              <i class="fas fa-check-circle text-white text-lg md:text-xl"></i>
            </div>
          </div>
          <div class="ml-3 md:ml-4">
            <p class="text-xs md:text-sm font-medium text-green-600">Cartes Actives</p>
            <p class="text-xl md:text-2xl font-bold text-green-900">{{ cards|filter(c => c.status)|length }}</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-2xl shadow-lg border border-green-100 p-4 md:p-6 relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-green-200 bg-gradient-to-br from-red-50 to-red-100 border-l-4 border-red-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 md:w-12 md:h-12 bg-red-500 rounded-lg flex items-center justify-center">
              <i class="fas fa-times-circle text-white text-lg md:text-xl"></i>
            </div>
          </div>
          <div class="ml-3 md:ml-4">
            <p class="text-xs md:text-sm font-medium text-red-600">Cartes Inactives</p>
            <p class="text-xl md:text-2xl font-bold text-red-900">{{ cards|filter(c => not c.status)|length }}</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-2xl shadow-lg border border-green-100 p-4 md:p-6 relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-green-200 bg-gradient-to-br from-orange-50 to-orange-100 border-l-4 border-orange-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 md:w-12 md:h-12 bg-orange-500 rounded-lg flex items-center justify-center">
              <i class="fas fa-clock text-white text-lg md:text-xl"></i>
            </div>
          </div>
          <div class="ml-3 md:ml-4">
            <p class="text-xs md:text-sm font-medium text-orange-600">Expirent Bientôt</p>
            <p class="text-xl md:text-2xl font-bold text-orange-900">{{ countExpiringSoon }}</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-2xl shadow-lg border border-green-100 p-4 md:p-6 relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-green-200 bg-gradient-to-br from-blue-50 to-blue-100 border-l-4 border-blue-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 md:w-12 md:h-12 bg-blue-500 rounded-lg flex items-center justify-center">
              <i class="fas fa-id-card text-white text-lg md:text-xl"></i>
            </div>
          </div>
          <div class="ml-3 md:ml-4">
            <p class="text-xs md:text-sm font-medium text-blue-600">Total Cartes</p>
            <p class="text-xl md:text-2xl font-bold text-blue-900">{{ total }}</p>
          </div>
        </div>
      </div>
    </div>

    {# Advanced Filters #}
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">
          <i class="fas fa-filter text-orange-500 mr-2"></i>Filtres Avancés
        </h3>
        <button id="toggleFilters" class="text-sm text-gray-500 hover:text-gray-700">
          <i class="fas fa-chevron-down"></i>
        </button>
      </div>
      
      <form method="get" class="space-y-4" id="filtersForm">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Recherche</label>
            <div class="relative">
              <input type="text" name="q" value="{{ q }}" 
                     placeholder="Nom, email, n° carte..." 
                     class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
              <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Statut</label>
            <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
              <option value="">Tous les statuts</option>
              <option value="1" {{ status == '1' ? 'selected' : '' }}>Actives</option>
              <option value="0" {{ status == '0' ? 'selected' : '' }}>Révoquées</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Date d'émission</label>
            <input type="date" name="issue_date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Expiration</label>
            <select name="expiry_filter" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
              <option value="">Toutes</option>
              <option value="expired">Expirées</option>
              <option value="expiring_soon">Expirent bientôt</option>
              <option value="valid">Valides</option>
            </select>
          </div>
        </div>
        
        <div class="flex items-center gap-3 pt-4">
          <button type="submit" class="admin-btn admin-btn-primary">
            <i class="fas fa-search mr-2"></i>Filtrer
          </button>
          <button type="button" onclick="resetFilters()" class="admin-btn admin-btn-secondary">
            <i class="fas fa-times mr-2"></i>Réinitialiser
          </button>
        </div>
      </form>
    </div>

    {# Bulk Actions Bar #}
    <div id="bulkActionsBar" class="admin-card bg-orange-50 border-orange-200 hidden">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <i class="fas fa-check-square text-orange-500 mr-3"></i>
          <span class="font-medium text-orange-800">
            <span id="selectedCount">0</span> carte(s) sélectionnée(s)
          </span>
        </div>
        <div class="flex items-center gap-2">
          <button class="admin-btn admin-btn-sm bg-green-600 hover:bg-green-700 text-white">
            <i class="fas fa-check mr-1"></i>Activer
          </button>
          <button class="admin-btn admin-btn-sm bg-red-600 hover:bg-red-700 text-white">
            <i class="fas fa-ban mr-1"></i>Révoquer
          </button>
          <button class="admin-btn admin-btn-sm bg-blue-600 hover:bg-blue-700 text-white">
            <i class="fas fa-download mr-1"></i>Exporter
          </button>
        </div>
      </div>
    </div>

    {# Cards Table #}
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
            <tr>
              <th class="px-6 py-4 text-left">
                <input type="checkbox" id="selectAll" class="rounded border-gray-300 text-green-600 focus:ring-green-500">
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center cursor-pointer hover:text-gray-700">
                  N° Carte
                  <i class="fas fa-sort ml-2 text-gray-400"></i>
                </div>
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center cursor-pointer hover:text-gray-700">
                  Membre
                  <i class="fas fa-sort ml-2 text-gray-400"></i>
                </div>
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center cursor-pointer hover:text-gray-700">
                  Date d'émission
                  <i class="fas fa-sort ml-2 text-gray-400"></i>
                </div>
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center cursor-pointer hover:text-gray-700">
                  Expiration
                  <i class="fas fa-sort ml-2 text-gray-400"></i>
                </div>
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
              <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {% for c in cards %}
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4">
                  <input type="checkbox" class="card-checkbox rounded border-gray-300 text-green-600 focus:ring-green-500" value="{{ c.id }}">
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-10 h-10 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center mr-3">
                      <i class="fas fa-id-card text-white"></i>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-900">{{ c.cardnumberC }}</div>
                      <div class="text-sm text-gray-500">ID: {{ c.id }}</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {% if c.user %}
                    <div class="flex items-center">
                      <div class="w-8 h-8 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center mr-3">
                        <span class="text-white text-sm font-medium">{{ c.user.firstname|first|upper }}</span>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-900">{{ c.user.firstname }} {{ c.user.lastname }}</div>
                        <div class="text-sm text-gray-500">{{ c.user.email|default('—') }}</div>
                      </div>
                    </div>
                  {% else %}
                    <span class="text-gray-400 italic">Aucun membre assigné</span>
                  {% endif %}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {% if c.issuedate %}
                    <div class="text-sm text-gray-900">{{ c.issuedate|date('d/m/Y') }}</div>
                    <div class="text-sm text-gray-500">{{ c.issuedate|date('H:i') }}</div>
                  {% else %}
                    <span class="text-gray-400">—</span>
                  {% endif %}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {% if c.expiryDate %}
                    {% set isExpired = c.expiryDate < date() %}
                    {% set isExpiringSoon = c.expiryDate < date('+30 days') and not isExpired %}
                    <div class="text-sm {{ isExpired ? 'text-red-600' : (isExpiringSoon ? 'text-orange-600' : 'text-gray-900') }}">
                      {{ c.expiryDate|date('d/m/Y') }}
                    </div>
                    {% if isExpired %}
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <i class="fas fa-exclamation-triangle mr-1"></i>Expirée
                      </span>
                    {% elseif isExpiringSoon %}
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                        <i class="fas fa-clock mr-1"></i>Bientôt
                      </span>
                    {% endif %}
                  {% else %}
                    <span class="text-gray-400">—</span>
                  {% endif %}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {% if c.status %}
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                      <i class="fas fa-check-circle mr-2"></i>Active
                    </span>
                  {% else %}
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                      <i class="fas fa-times-circle mr-2"></i>Révoquée
                    </span>
                  {% endif %}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end gap-2">
                    <a href="{{ path('admin_cards_show', {id: c.id}) }}" 
                       class="text-green-600 hover:text-green-900 transition-colors duration-150"
                       title="Voir les détails">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="#" class="text-blue-600 hover:text-blue-900 transition-colors duration-150" title="Modifier">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a href="#" class="text-orange-600 hover:text-orange-900 transition-colors duration-150" title="Télécharger">
                      <i class="fas fa-download"></i>
                    </a>
                    {% if c.status %}
                      <a href="#" class="text-red-600 hover:text-red-900 transition-colors duration-150" title="Révoquer">
                        <i class="fas fa-ban"></i>
                      </a>
                    {% else %}
                      <a href="#" class="text-green-600 hover:text-green-900 transition-colors duration-150" title="Activer">
                        <i class="fas fa-check"></i>
                      </a>
                    {% endif %}
                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="7" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center">
                    <i class="fas fa-id-card text-gray-300 text-4xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune carte trouvée</h3>
                    <p class="text-gray-500">Aucune carte ne correspond à vos critères de recherche.</p>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

    {# Advanced Pagination #}
    {% if pages > 1 %}
      <div class="admin-card">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-4">
            <div class="text-sm text-gray-700">
              Affichage de <span class="font-medium">{{ ((page - 1) * size) + 1 }}</span> à 
              <span class="font-medium">{{ ((page - 1) * size) + cards|length }}</span> sur 
              <span class="font-medium">{{ total }}</span> résultats
            </div>
            <select name="size" onchange="changePageSize(this.value)" class="text-sm border border-gray-300 rounded px-2 py-1 focus:ring-2 focus:ring-green-500 focus:border-green-500">
              <option value="10" {{ size == 10 ? 'selected' : '' }}>10 par page</option>
              <option value="25" {{ size == 25 ? 'selected' : '' }}>25 par page</option>
              <option value="50" {{ size == 50 ? 'selected' : '' }}>50 par page</option>
              <option value="100" {{ size == 100 ? 'selected' : '' }}>100 par page</option>
            </select>
          </div>
          
          <div class="flex items-center gap-1">
            {% set prev = page > 1 ? page - 1 : 1 %}
            {% set next = page < pages ? page + 1 : pages %}
            
            <a href="?q={{ q }}&status={{ status }}&page=1&size={{ size }}" 
               class="admin-btn admin-btn-sm {{ page == 1 ? 'opacity-50 cursor-not-allowed' : '' }}">
              <i class="fas fa-angle-double-left"></i>
            </a>
            <a href="?q={{ q }}&status={{ status }}&page={{ prev }}&size={{ size }}" 
               class="admin-btn admin-btn-sm {{ page == 1 ? 'opacity-50 cursor-not-allowed' : '' }}">
              <i class="fas fa-angle-left"></i>
            </a>
            
            {% for p in range(max(1, page - 2), min(pages, page + 2)) %}
              <a href="?q={{ q }}&status={{ status }}&page={{ p }}&size={{ size }}" 
                 class="admin-btn admin-btn-sm {{ p == page ? 'admin-btn-primary' : '' }}">
                {{ p }}
              </a>
            {% endfor %}
            
            <a href="?q={{ q }}&status={{ status }}&page={{ next }}&size={{ size }}" 
               class="admin-btn admin-btn-sm {{ page == pages ? 'opacity-50 cursor-not-allowed' : '' }}">
              <i class="fas fa-angle-right"></i>
            </a>
            <a href="?q={{ q }}&status={{ status }}&page={{ pages }}&size={{ size }}" 
               class="admin-btn admin-btn-sm {{ page == pages ? 'opacity-50 cursor-not-allowed' : '' }}">
              <i class="fas fa-angle-double-right"></i>
            </a>
          </div>
        </div>
      </div>
    {% endif %}
  </div>

  {# JavaScript for interactivity #}
  <script>
    // Bulk selection functionality
    document.getElementById('selectAll').addEventListener('change', function() {
      const checkboxes = document.querySelectorAll('.card-checkbox');
      const bulkBar = document.getElementById('bulkActionsBar');
      const selectedCount = document.getElementById('selectedCount');
      
      checkboxes.forEach(checkbox => {
        checkbox.checked = this.checked;
      });
      
      if (this.checked) {
        bulkBar.classList.remove('hidden');
        selectedCount.textContent = checkboxes.length;
      } else {
        bulkBar.classList.add('hidden');
        selectedCount.textContent = '0';
      }
    });

    // Individual checkbox handling
    document.querySelectorAll('.card-checkbox').forEach(checkbox => {
      checkbox.addEventListener('change', function() {
        const checkedBoxes = document.querySelectorAll('.card-checkbox:checked');
        const bulkBar = document.getElementById('bulkActionsBar');
        const selectedCount = document.getElementById('selectedCount');
        const selectAll = document.getElementById('selectAll');
        
        if (checkedBoxes.length > 0) {
          bulkBar.classList.remove('hidden');
          selectedCount.textContent = checkedBoxes.length;
        } else {
          bulkBar.classList.add('hidden');
          selectedCount.textContent = '0';
        }
        
        selectAll.checked = checkedBoxes.length === document.querySelectorAll('.card-checkbox').length;
      });
    });

    // Filter toggle
    document.getElementById('toggleFilters').addEventListener('click', function() {
      const form = document.getElementById('filtersForm');
      const icon = this.querySelector('i');
      
      if (form.style.display === 'none') {
        form.style.display = 'block';
        icon.classList.remove('fa-chevron-down');
        icon.classList.add('fa-chevron-up');
      } else {
        form.style.display = 'none';
        icon.classList.remove('fa-chevron-up');
        icon.classList.add('fa-chevron-down');
      }
    });

    // Reset filters
    function resetFilters() {
      document.querySelector('input[name="q"]').value = '';
      document.querySelector('select[name="status"]').value = '';
      document.querySelector('input[name="issue_date"]').value = '';
      document.querySelector('select[name="expiry_filter"]').value = '';
    }

    // Change page size
    function changePageSize(size) {
      const url = new URL(window.location);
      url.searchParams.set('size', size);
      url.searchParams.set('page', '1');
      window.location = url;
    }

    // Animate cards on load
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.admin-card');
      cards.forEach((card, index) => {
        setTimeout(() => {
          card.style.opacity = '0';
          card.style.transform = 'translateY(20px)';
          card.style.transition = 'all 0.5s ease';
          
          setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
          }, 50);
        }, index * 100);
      });
    });
  </script>
{% endblock %}

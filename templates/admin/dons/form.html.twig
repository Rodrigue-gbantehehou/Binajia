{% extends 'admin/base.html.twig' %}

{% block title %}{{ form.vars.value.id ? 'Modifier' : 'Créer' }} un don{% endblock %}

{% block admin_body %}
<div class="min-h-screen p-6">
    {# Header #}
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">
          <i class="fas fa-hand-holding-heart text-red-500 mr-3"></i>
          {{ form.vars.value.id ? 'Modifier' : 'Créer' }} un don
        </h1>
        <p class="text-gray-600 mt-1">Remplissez les informations du don</p>
      </div>
      <a href="{{ path('admin_dons_index') }}" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500">
        <i class="fas fa-arrow-left"></i>Retour à la liste
      </a>
    </div>

    {# Form #}
    {{ form_start(form, {'attr': {'class': 'bg-white rounded-2xl shadow-lg border border-gray-100 p-8 space-y-6'}}) }}
    
      {# Informations du donateur #}
      <div class="border-b border-gray-200 pb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
          <i class="fas fa-user-circle text-blue-500 mr-2"></i>Informations du donateur
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
            {{ form_widget(form.nom, {'attr': {
              'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200',
              'placeholder': 'Ex: John Doe'
            }}) }}
            {{ form_errors(form.nom) }}
          </div>
          
          <div>
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
            {{ form_widget(form.email, {'attr': {
              'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200',
              'placeholder': 'Ex: john@example.com'
            }}) }}
            {{ form_errors(form.email) }}
          </div>
        </div>
      </div>

      {# Détails du don #}
      <div class="border-b border-gray-200 pb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
          <i class="fas fa-money-bill-wave text-green-500 mr-2"></i>Détails du don
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            {{ form_label(form.montant, 'Montant', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
            <div class="relative">
              {{ form_widget(form.montant, {'attr': {
                'class': 'w-full pl-8 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200',
                'placeholder': '0.00',
                'step': '0.01',
                'min': '0'
              }}) }}
              <i class="fas fa-euro-sign absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
            {{ form_errors(form.montant) }}
          </div>
          
          <div>
            {{ form_label(form.typeDon, 'Type de don', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
            {{ form_widget(form.typeDon, {'attr': {
              'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200'
            }}) }}
            {{ form_errors(form.typeDon) }}
          </div>
          
        </div>
        <div class="col-span-2">
            {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
            {{ form_widget(form.statut, {'attr': {
              'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200'
            }}) }}
            {{ form_errors(form.statut) }}
          </div>
      </div>

   



      {# Actions #}
      <div class="flex items-center justify-between pt-4">
        <div class="text-sm text-gray-500">
          <i class="fas fa-info-circle mr-1"></i>
          Les champs marqués d'un <span class="text-red-500">*</span> sont obligatoires
        </div>
        <div class="flex items-center gap-3">
          <a href="{{ path('admin_dons_index') }}" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500">
            <i class="fas fa-times"></i>Annuler
          </a>
          <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-gradient-to-r from-green-600 to-red-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl">
            <i class="fas fa-save"></i>{{ form.vars.value.id ? 'Mettre à jour' : 'Créer le don' }}
          </button>
        </div>
      </div>

    {{ form_end(form) }}
  </div>
{% endblock %}
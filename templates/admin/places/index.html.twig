          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
            <select name="type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
              <option value="">Tous les types</option>
              <option value="historique">Historique</option>
              <option value="culturel">Culturel</option>
              <option value="touristique">Touristique</option>
              <option value="religieux">Religieux</option>
            </select>
          </div>
        </div>
        
        <div class="flex items-center gap-3 pt-4">
          <button type="submit" class="admin-btn admin-btn-primary">
            <i class="fas fa-search mr-2"></i>Filtrer
          </button>
          <button type="button" onclick="resetFilters()" class="admin-btn admin-btn-secondary">
            <i class="fas fa-times mr-2"></i>RÃ©initialiser
          </button>
        </div>
      </form>
    </div>

    {# Places Table #}
    <div class="admin-card p-0 overflow-hidden">
    <div class="overflow-x-auto"> 
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
          <h3 class="text-lg font-semibold text-gray-900">Liste des lieux</h3>
          <div class="flex items-center gap-2">
            <button class="text-sm text-gray-600 hover:text-gray-900 px-2 py-1">
              <i class="fas fa-sort"></i>
              <span class="hidden sm:inline ml-1">Trier</span>
            </button>
            <button class="text-sm text-gray-600 hover:text-gray-900 px-2 py-1">
              <i class="fas fa-columns"></i>
              <span class="hidden sm:inline ml-1">Colonnes</span>
            </button>
          </div>
        </div>
      </div>
      
      <div class="admin-card p-0 overflow-hidden ">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
            <tr>
              <th class="px-6 py-4 text-text-xs font-medium text-gray-500 uppercase tracking-widerleft ">
                <input type="checkbox" class="rounded border-gray-300 text-green-600 focus:ring-green-500">
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lieu</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Localisation</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">PopularitÃ©</th>
              <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
         <tbody class="bg-white divide-y divide-gray-200">
         
            {% for p in places %}
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4">
                  <input type="checkbox" class="event-checkbox rounded border-gray-300 text-green-600 focus:ring-green-500" >
                </td>
                <td>
                  <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg flex items-center justify-center flex-shrink-0">
                      <i class="fas fa-map-marker-alt text-white text-sm"></i>
                    </div>
                    <div class="min-w-0">
                      <div class="font-medium text-gray-900 truncate">{{ p.name }}</div>
                      <div class="text-sm text-gray-500 md:hidden">{{ p.city ?: 'Non spÃ©cifiÃ©' }}, {{ p.country ?: 'Non spÃ©cifiÃ©' }}</div>
                      <div class="text-xs text-gray-400">ID: #{{ p.id }}</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">
                  <div class="text-sm text-gray-900">
                    <i class="fas fa-city text-blue-500 mr-1"></i>
                    {{ p.city ?: 'Non spÃ©cifiÃ©' }}
                  </div>
                  <div class="text-xs text-gray-500">
                    <i class="fas fa-flag text-green-500 mr-1"></i>
                    {{ p.country ?: 'Non spÃ©cifiÃ©' }}
                  </div>
                </td>
                <td class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">
                  <span class="admin-badge admin-badge-info">
                    <i class="fas fa-tag mr-1"></i>
                  </span>
                </td>
                <td class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">
                  <div class="flex items-center">
                    {% set rating = random(3, 5) %}
                    {% for i in 1..5 %}
                      <i class="fas fa-star text-{{ i <= rating ? 'yellow' : 'gray' }}-400 text-xs"></i>
                    {% endfor %}
                    <span class="ml-2 text-xs text-gray-600">({{ rating }}/5)</span>
                  </div>
                </td>
                <td class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  <div class="flex items-center justify-end gap-1">
                    <a href="{{ path('admin_places_show', {id: p.id}) }}" 
                       class="inline-flex items-center justify-center w-8 h-8 rounded-lg text-sm transition-all duration-200 bg-blue-50 text-blue-600 hover:bg-blue-100" 
                       title="Voir">
                      <i class="fas fa-eye text-xs"></i>
                    </a>
                    <button class="inline-flex items-center justify-center w-8 h-8 rounded-lg text-sm transition-all duration-200 bg-green-50 text-green-600 hover:bg-green-100 hidden sm:inline-flex" 
                            title="Modifier" onclick="window.location.href='{{ path('admin_places_edit', {id: p.id}) }}'">
                      <i class="fas fa-edit text-xs"></i>
                    </button>
                    <button class="inline-flex items-center justify-center w-8 h-8 rounded-lg text-sm transition-all duration-200 bg-red-50 text-red-600 hover:bg-red-100 hidden sm:inline-flex" 
                            title="Supprimer" data-action="delete" data-id="{{ p.id }}" data-type="lieu">
                      <i class="fas fa-trash text-xs"></i>
                    </button>
                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="6" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center">
                    <i class="fas fa-map-marker-alt text-gray-300 text-4xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun lieu trouvÃ©</h3>

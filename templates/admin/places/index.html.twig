                      <i class="fas fa-plus mr-2"></i>Ajouter un lieu
                    </a>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        
      </div>
      </div>
    </div>
  </div>
{% endblock %}

{% extends 'base.html.twig' %}
{% block title %}Admin — Binajia{% endblock %}
{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between p-3 rounded-xl bg-white ring-1 ring-gray-200">
    <div class="flex items-center gap-3">
      <span class="font-display font-semibold">Admin</span>
      <span class="text-sm text-gray-500">Ops rapides</span>
    </div>
    <div class="flex gap-2">
      <a href="#" class="px-3 py-2 rounded-md bg-primary text-white">Nouvel événement</a>
      <a href="#" class="px-3 py-2 rounded-md ring-1 ring-gray-300">Nouveau lieu</a>
    </div>
  </div>

  <div class="mt-6 grid lg:grid-cols-3 gap-4">
    <div class="p-4 rounded-xl bg-white ring-1 ring-gray-200">
      <h3 class="font-semibold">Utilisateurs</h3>
      <div class="mt-2 text-sm text-gray-600">Total: {{ stats.users }}</div>
      <a href="#users" class="text-primary text-sm mt-2 inline-block">Gérer</a>
    </div>
    <div class="p-4 rounded-xl bg-white ring-1 ring-gray-200">
      <h3 class="font-semibold">Événements</h3>
      <div class="mt-2 text-sm text-gray-600">À venir: {{ stats.eventsUpcoming }}</div>
      <a href="#events" class="text-primary text-sm mt-2 inline-block">Gérer</a>
    </div>
    <div class="p-4 rounded-xl bg-white ring-1 ring-gray-200">
      <h3 class="font-semibold">Revenus</h3>
      <div class="mt-2 text-2xl font-semibold">{{ stats.revenue30d }} {{ stats.currency }}</div>
    </div>
  </div>

  <div class="mt-6 grid md:grid-cols-2 gap-4">
    <div id="events" class="p-4 rounded-xl bg-white ring-1 ring-gray-200">…</div>
    <div id="users" class="p-4 rounded-xl bg-white ring-1 ring-gray-200">…</div>
  </div>
</div>
{% endblock %}

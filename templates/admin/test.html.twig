{% extends 'admin/base.html.twig' %}

{% block title %}Test Design Admin{% endblock %}

{% block admin_body %}
<div class="space-y-6">
    <h1 class="text-3xl font-bold text-gray-900">
        <i class="fas fa-palette text-orange-500 mr-3"></i>Test du Design Admin
    </h1>
    
    <!-- Test des couleurs de base -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-2xl shadow-lg border border-green-100 p-6 relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-green-600 to-orange-500"></div>
            <div class="flex items-center">
                <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center mr-4">
                    <i class="fas fa-check text-white text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-green-600">Test Vert</p>
                    <p class="text-2xl font-bold text-green-900">100%</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg border border-orange-100 p-6 relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-orange-500 to-red-500"></div>
            <div class="flex items-center">
                <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mr-4">
                    <i class="fas fa-star text-white text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-orange-600">Test Orange</p>
                    <p class="text-2xl font-bold text-orange-900">85%</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg border border-blue-100 p-6 relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 to-purple-500"></div>
            <div class="flex items-center">
                <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center mr-4">
                    <i class="fas fa-chart-line text-white text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-blue-600">Test Bleu</p>
                    <p class="text-2xl font-bold text-blue-900">92%</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg border border-red-100 p-6 relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-red-500 to-pink-500"></div>
            <div class="flex items-center">
                <div class="w-12 h-12 bg-red-500 rounded-lg flex items-center justify-center mr-4">
                    <i class="fas fa-exclamation text-white text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-red-600">Test Rouge</p>
                    <p class="text-2xl font-bold text-red-900">12</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Test des boutons -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Test des Boutons</h2>
        <div class="flex flex-wrap gap-4">
            <button class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-gradient-to-r from-green-600 to-orange-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl">
                <i class="fas fa-plus"></i>Bouton Primaire
            </button>
            
            <button class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500">
                <i class="fas fa-download"></i>Bouton Secondaire
            </button>
            
            <button class="inline-flex items-center gap-2 px-4 py-2 rounded-lg font-semibold transition-all duration-300 bg-gradient-to-r from-green-600 to-orange-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl text-sm">
                <i class="fas fa-edit"></i>Petit Bouton
            </button>
        </div>
    </div>
    
    <!-- Test du tableau -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900">Test Tableau</h2>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <tr class="hover:bg-gray-50 transition-colors duration-150">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center mr-3">
                                    <i class="fas fa-user text-white"></i>
                                </div>
                                <div class="text-sm font-medium text-gray-900">Test User</div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <i class="fas fa-check-circle mr-2"></i>Actif
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex items-center justify-end gap-2">
                                <a href="#" class="text-green-600 hover:text-green-900 transition-colors duration-150">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="#" class="text-blue-600 hover:text-blue-900 transition-colors duration-150">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="#" class="text-red-600 hover:text-red-900 transition-colors duration-150">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

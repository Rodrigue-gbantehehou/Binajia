{% extends 'admin/base.html.twig' %}

{% block title %}Événement {{ event.title ?: '—' }}{% endblock %}

{% block admin_body %}
  <div class="space-y-6">
    {# Header #}
    <div class="flex items-center justify-between">
      <div>
        <div class="flex items-center gap-3 mb-2">
          <a href="{{ path('admin_events_index') }}" class="text-gray-500 hover:text-gray-700 transition-colors">
            <i class="fas fa-arrow-left"></i>
          </a>
          <h1 class="text-3xl font-bold text-gray-900">
            <i class="fas fa-calendar-alt text-orange-500 mr-3"></i>
            {{ event.title ?: '—' }}
          </h1>
        </div>
        <p class="text-gray-600">Détails de l'événement</p>
      </div>
      <div class="flex items-center gap-3">
        <button class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500">
          <i class="fas fa-share-alt"></i>Partager
        </button>
        <a href="{{ path('admin_events_edit', {id: event.id}) }}" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-gradient-to-r from-green-600 to-orange-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl">
          <i class="fas fa-edit"></i>Modifier
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      {# Main Info #}
      <div class="lg:col-span-2 space-y-6">
        {# Event Details Card #}
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
            <i class="fas fa-info-circle text-green-500 mr-2"></i>
            Informations générales
          </h2>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="w-32 text-sm font-medium text-gray-500">Titre</div>
              <div class="flex-1 text-gray-900 font-semibold">{{ event.title ?: '—' }}</div>
            </div>
            
            <div class="flex items-start">
              <div class="w-32 text-sm font-medium text-gray-500">Description</div>
              <div class="flex-1 text-gray-700">{{ event.description ?: '—' }}</div>
            </div>
          </div>
        </div>

        {# Location Card #}
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
            <i class="fas fa-map-marker-alt text-orange-500 mr-2"></i>
            Localisation
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="text-sm font-medium text-gray-500 mb-1">Lieu</div>
              <div class="text-gray-900 font-semibold">{{ event.location ?: '—' }}</div>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="text-sm font-medium text-gray-500 mb-1">Pays</div>
              <div class="text-gray-900 font-semibold">{{ event.country ?: '—' }}</div>
            </div>
          </div>
        </div>

        {# Dates Card #}
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
            <i class="fas fa-clock text-blue-500 mr-2"></i>
            Dates et horaires
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-green-50 rounded-lg p-4 border-l-4 border-green-500">
              <div class="text-sm font-medium text-green-700 mb-1">
                <i class="fas fa-play mr-1"></i>Début
              </div>
              <div class="text-gray-900 font-semibold">
                {{ event.startDate ? event.startDate|date('d/m/Y') : '—' }}
              </div>
              <div class="text-sm text-gray-600">
                {{ event.startDate ? event.startDate|date('H:i') : '' }}
              </div>
            </div>
            
            <div class="bg-red-50 rounded-lg p-4 border-l-4 border-red-500">
              <div class="text-sm font-medium text-red-700 mb-1">
                <i class="fas fa-stop mr-1"></i>Fin
              </div>
              <div class="text-gray-900 font-semibold">
                {{ event.endDate ? event.endDate|date('d/m/Y') : '—' }}
              </div>
              <div class="text-sm text-gray-600">
                {{ event.endDate ? event.endDate|date('H:i') : '' }}
              </div>
            </div>
          </div>
        </div>
      </div>

      {# Sidebar #}
      <div class="space-y-6">
        {# Quick Stats #}
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Statistiques</h3>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center">
                  <i class="fas fa-ticket-alt text-white"></i>
                </div>
                <div>
                  <div class="text-sm text-gray-600">Réservations</div>
                  <div class="text-xl font-bold text-gray-900">0</div>
                </div>
              </div>
            </div>
            
            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center">
                  <i class="fas fa-users text-white"></i>
                </div>
                <div>
                  <div class="text-sm text-gray-600">Participants</div>
                  <div class="text-xl font-bold text-gray-900">0</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {# Actions #}
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions rapides</h3>
          
          <div class="space-y-3">
            <button class="w-full inline-flex items-center gap-2 px-4 py-3 rounded-lg font-medium transition-all duration-200 bg-blue-50 text-blue-700 hover:bg-blue-100">
              <i class="fas fa-envelope"></i>
              Envoyer invitation
            </button>
            
            <button class="w-full inline-flex items-center gap-2 px-4 py-3 rounded-lg font-medium transition-all duration-200 bg-green-50 text-green-700 hover:bg-green-100">
              <i class="fas fa-download"></i>
              Exporter données
            </button>
            
            <button class="w-full inline-flex items-center gap-2 px-4 py-3 rounded-lg font-medium transition-all duration-200 bg-red-50 text-red-700 hover:bg-red-100">
              <i class="fas fa-trash"></i>
              Supprimer événement
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

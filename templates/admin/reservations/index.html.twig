{% extends 'admin/base.html.twig' %}

{% block title %}Réservations{% endblock %}

{% block admin_body %}
  <div class="space-y-4">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-2xl font-bold">Réservations</h1>
      <a class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500" href="{{ path('admin_reservations_export') }}">
        <i class="fas fa-download"></i>Exporter CSV
      </a>
    </div>

    <div class="overflow-x-auto rounded-xl ring-1 ring-gray-200 bg-white">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Événement</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Utilisateur</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Places</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {% for r in reservations %}
            <tr>
              <td class="px-4 py-3">{{ r.event }}</td>
              <td class="px-4 py-3">{{ r.user }}</td>
              <td class="px-4 py-3">{{ r.email }}</td>
              <td class="px-4 py-3">{{ r.date ? r.date|date('d/m/Y') : '—' }}</td>
              <td class="px-4 py-3">{{ r.seats }}</td>
              <td class="px-4 py-3">
                <span class="px-2 py-1 text-xs rounded-full {{ r.status == 'confirmed' ? 'bg-green-100 text-green-800' : (r.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') }}">
                  {{ r.status == 'confirmed' ? 'Confirmé' : (r.status == 'pending' ? 'En attente' : 'Annulé') }}
                </span>
              </td>
            </tr>
          {% else %}
            <tr><td colspan="6" class="px-4 py-6 text-center text-gray-500">Aucune réservation</td></tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="text-sm text-gray-600">Total: {{ total }}</div>
  </div>
{% endblock %}

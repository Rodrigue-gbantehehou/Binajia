{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des réservations{% endblock %}

{% block admin_body %}
<div class="space-y-6">
    {# Header #}
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">
                <i class="fas fa-calendar-check text-blue-500 mr-3"></i>
                Gestion des réservations
            </h1>
            <p class="text-gray-600 mt-1">Liste de toutes les réservations enregistrées</p>
        </div>
        <a href="{{ path('admin_reservations_new') }}" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-gradient-to-r from-blue-600 to-green-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl">
            <i class="fas fa-plus"></i>Nouvelle réservation
        </a>
    </div>

    {# Stats #}
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total réservations</p>
                    <p class="text-2xl font-bold text-gray-900">{{ reservations|length }}</p>
                </div>
                <div class="p-3 bg-blue-100 rounded-xl">
                    <i class="fas fa-calendar text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">À venir</p>
                    <p class="text-2xl font-bold text-gray-900">
                        {{ reservations|filter(r => r.datedepart > date())|length }}
                    </p>
                </div>
                <div class="p-3 bg-green-100 rounded-xl">
                    <i class="fas fa-plane text-green-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Voyageurs totaux</p>
                    <p class="text-2xl font-bold text-gray-900">
                        {{ reservations|reduce((total, r) => total + r.nbrvoyageurs, 0) }}
                    </p>
                </div>
                <div class="p-3 bg-purple-100 rounded-xl">
                    <i class="fas fa-users text-purple-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Budget moyen</p>
                    <p class="text-2xl font-bold text-gray-900">
                        {% set totalBudget = reservations|reduce((total, r) => total + (r.budgetestime ?: 0), 0) %}
                        {% set avgBudget = reservations|length > 0 ? totalBudget / reservations|length : 0 %}
                        {{ avgBudget|number_format(0, ',', ' ') }} €
                    </p>
                </div>
                <div class="p-3 bg-orange-100 rounded-xl">
                    <i class="fas fa-euro-sign text-orange-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    {# Table #}
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Liste des réservations</h2>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Client
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Destination
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Départ
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Voyageurs
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Budget
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Type
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Statut
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for reservation in reservations %}
                    <tr class="hover:bg-gray-50 transition-colors duration-150">
                        {# Client #}
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                                    <span class="text-white font-semibold text-sm">
                                        {{ reservation.Nom|first|upper }}
                                    </span>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">{{ reservation.Nom }}</div>
                                    <div class="text-sm text-gray-500">{{ reservation.email }}</div>
                                </div>
                            </div>
                        </td>

                        {# Destination #}
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ reservation.destination }}</div>
                            <div class="text-sm text-gray-500">{{ reservation.paysresidence }}</div>
                        </td>

                        {# Date de départ #}
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">
                                {{ reservation.datedepart ? reservation.datedepart|date('d/m/Y') : 'N/A' }}
                            </div>
                            <div class="text-xs text-gray-500">
                                {% if reservation.datedepart %}
                                    {% set daysLeft = date(reservation.datedepart).diff(date()).days %}
                                    {% if daysLeft > 0 %}
                                        <span class="text-orange-600">Dans {{ daysLeft }} jours</span>
                                    {% else %}
                                        <span class="text-green-600">Passé</span>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </td>

                        {# Nombre de voyageurs #}
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <i class="fas fa-users text-gray-400 mr-2"></i>
                                <span class="text-sm font-medium text-gray-900">{{ reservation.nbrvoyageurs }}</span>
                            </div>
                        </td>

                        {# Budget #}
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">
                                {{ reservation.budgetestime ? reservation.budgetestime ~ ' €' : 'N/A' }}
                            </div>
                        </td>

                        {# Type de voyage #}
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                {% if reservation.typevoyage == 'affaires' %}bg-blue-100 text-blue-800
                                {% elseif reservation.typevoyage == 'familial' %}bg-green-100 text-green-800
                                {% elseif reservation.typevoyage == 'romantique' %}bg-pink-100 text-pink-800
                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                {{ reservation.typevoyage|capitalize }}
                            </span>
                        </td>

                        {# Statut #}
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                {% if reservation.typereservation == 'confirmée' %}bg-green-100 text-green-800
                                {% elseif reservation.typereservation == 'en attente' %}bg-yellow-100 text-yellow-800
                                {% elseif reservation.typereservation == 'annulée' %}bg-red-100 text-red-800
                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                <i class="fas 
                                    {% if reservation.typereservation == 'confirmée' %}fa-check-circle
                                    {% elseif reservation.typereservation == 'en attente' %}fa-clock
                                    {% elseif reservation.typereservation == 'annulée' %}fa-times-circle
                                    {% else %}fa-question-circle{% endif %} mr-1"></i>
                                {{ reservation.typereservation|capitalize }}
                            </span>
                        </td>

                        {# Actions #}
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex items-center justify-end gap-2">
                                <a href="{{ path('admin_reservations_show', {'id': reservation.id}) }}" 
                                   class="inline-flex items-center gap-1 px-3 py-2 rounded-lg text-blue-600 bg-blue-50 hover:bg-blue-100 transition-colors duration-200"
                                   title="Voir les détails">
                                    <i class="fas fa-eye text-sm"></i>
                                    <span class="hidden sm:inline">Voir</span>
                                </a>
                                <a href="{{ path('admin_reservations_edit', {'id': reservation.id}) }}" 
                                   class="inline-flex items-center gap-1 px-3 py-2 rounded-lg text-green-600 bg-green-50 hover:bg-green-100 transition-colors duration-200"
                                   title="Modifier">
                                    <i class="fas fa-edit text-sm"></i>
                                    <span class="hidden sm:inline">Modifier</span>
                                </a>
                                {% if reservation.facturepdf %}
                                <a href="{{ path('secure_upload', {'filename': reservation.facturepdf}) }}" 
                                   target="_blank"
                                   class="inline-flex items-center gap-1 px-3 py-2 rounded-lg text-purple-600 bg-purple-50 hover:bg-purple-100 transition-colors duration-200"
                                   title="Voir la facture">
                                    <i class="fas fa-file-pdf text-sm"></i>
                                    <span class="hidden sm:inline">Facture</span>
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center">
                            <div class="flex flex-col items-center justify-center text-gray-500">
                                <i class="fas fa-calendar-times text-4xl mb-4 text-gray-300"></i>
                                <p class="text-lg font-medium mb-2">Aucune réservation trouvée</p>
                                <p class="text-sm mb-4">Commencez par créer une nouvelle réservation</p>
                                <a href="{{ path('admin_reservations_new') }}" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
                                    <i class="fas fa-plus"></i>
                                    Créer une réservation
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Pagination (optionnelle) #}
        {% if reservations|length > 10 %}
        <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    Affichage de <span class="font-medium">1</span> à <span class="font-medium">{{ reservations|length }}</span> 
                    sur <span class="font-medium">{{ reservations|length }}</span> résultats
                </div>
                <div class="flex gap-2">
                    <button class="px-3 py-1 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50">
                        Précédent
                    </button>
                    <button class="px-3 py-1 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50">
                        Suivant
                    </button>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
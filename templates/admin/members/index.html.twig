{% extends 'admin/base.html.twig' %}

{% block title %}Membres{% endblock %}

{% block admin_body %}
  <!-- Header with Stats -->
  <div class="mb-6 md:mb-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
      <div>
        <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Gestion des membres</h1>
        <p class="text-sm md:text-base text-gray-600 mt-1">{{ total }} membres enregistrés</p>
      </div>
      <div class="flex items-center gap-2 md:gap-3">
        <button class="inline-flex items-center gap-2 px-4 md:px-6 py-2 md:py-3 text-sm md:text-base rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500">
          <i class="fas fa-download"></i>
          <span class="hidden sm:inline">Exporter</span>
        </button>
        <button class="inline-flex items-center gap-2 px-4 md:px-6 py-2 md:py-3 text-sm md:text-base rounded-xl font-semibold transition-all duration-300 bg-gradient-to-r from-green-600 to-orange-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl">
          <i class="fas fa-user-plus"></i>
          <span class="hidden sm:inline">Nouveau membre</span>
        </button>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 mb-6 md:mb-8">
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-4 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-users text-blue-600"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-gray-600">Total</p>
            <p class="text-xl font-semibold">{{ total }}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-4 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-user-check text-green-600"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-gray-600">Actifs</p>
            <p class="text-xl font-semibold">{{ (total * 0.85)|round }}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-4 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-user-plus text-orange-600"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-gray-600">Ce mois</p>
            <p class="text-xl font-semibold">{{ (total * 0.12)|round }}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-4 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-crown text-purple-600"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-gray-600">Admins</p>
            <p class="text-xl font-semibold">3</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Advanced Filters -->
  <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-6 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
    <form method="get" class="space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Recherche</label>
          <div class="relative">
            <input type="text" name="q" value="{{ q }}" placeholder="Nom, email..." class="admin-input pl-10" />
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Pays</label>
          <select name="country" class="admin-input">
            <option value="">Tous les pays</option>
            <option value="benin" {{ country == 'benin' ? 'selected' : '' }}>Bénin</option>
            <option value="nigeria" {{ country == 'nigeria' ? 'selected' : '' }}>Nigeria</option>
            <option value="france" {{ country == 'france' ? 'selected' : '' }}>France</option>
            <option value="canada" {{ country == 'canada' ? 'selected' : '' }}>Canada</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Rôle</label>
          <select name="role" class="admin-input">
            <option value="">Tous les rôles</option>
            <option value="admin" {{ role == 'admin' ? 'selected' : '' }}>Administrateur</option>
            <option value="user" {{ role == 'user' ? 'selected' : '' }}>Utilisateur</option>
          </select>
        </div>
        <div class="flex items-end">
          <button type="submit" class="inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-gradient-to-r from-green-600 to-orange-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl w-full">
            <i class="fas fa-filter"></i>
            Filtrer
          </button>
        </div>
      </div>
    </form>
  </div>

  <!-- Members Table -->
  <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
    <div class="px-4 md:px-6 py-3 md:py-4 border-b border-gray-200">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <h3 class="text-base md:text-lg font-semibold text-gray-900">Liste des membres</h3>
        <div class="flex items-center gap-2">
          <button class="text-xs md:text-sm text-gray-600 hover:text-gray-900 px-2 py-1">
            <i class="fas fa-sort"></i>
            <span class="hidden sm:inline ml-1">Trier</span>
          </button>
          <button class="text-xs md:text-sm text-gray-600 hover:text-gray-900 px-2 py-1">
            <i class="fas fa-columns"></i>
            <span class="hidden sm:inline ml-1">Colonnes</span>
          </button>
        </div>
      </div>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-12">
              <input type="checkbox" class="rounded border-gray-300 text-green-600 focus:ring-green-500">
            </th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Membre</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">Contact</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">Localisation</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">Inscription</th>
            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {% for m in members %}
            <tr class="hover:bg-gray-50 transition-colors duration-150">
              <td class="px-3 py-4 whitespace-nowrap">
                <input type="checkbox" class="rounded border-gray-300 text-green-600 focus:ring-green-500">
              </td>
              <td class="px-4 py-4 whitespace-nowrap">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-medium text-sm">{{ m.firstname|first }}{{ m.lastname|first }}</span>
                  </div>
                  <div class="min-w-0">
                    <div class="font-medium text-gray-900 truncate">{{ m.firstname }} {{ m.lastname }}</div>
                    <div class="text-xs text-gray-500 md:hidden">{{ m.email }}</div>
                    <div class="text-xs text-gray-400">ID: #{{ m.id }}</div>
                  </div>
                </div>
              </td>
              <td class="px-4 py-4 whitespace-nowrap hidden md:table-cell">
                <div class="text-sm text-gray-900">{{ m.email }}</div>
                <div class="text-xs text-gray-500">{{ m.phone ?: 'Non renseigné' }}</div>
              </td>
              <td class="px-4 py-4 whitespace-nowrap hidden lg:table-cell">
                <div class="text-sm text-gray-900">{{ m.country ?: '—' }}</div>
                <div class="text-xs text-gray-500">{{ m.city ?: '—' }}</div>
              </td>
              <td class="px-4 py-4 whitespace-nowrap">
                {% if 'ROLE_ADMIN' in m.roles %}
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <i class="fas fa-crown mr-1 text-xs"></i>
                    Admin
                  </span>
                {% else %}
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <i class="fas fa-user mr-1 text-xs"></i>
                    Membre
                  </span>
                {% endif %}
              </td>
              <td class="px-4 py-4 whitespace-nowrap hidden sm:table-cell">
                <div class="text-sm text-gray-900">{{ m.createdAt ? m.createdAt|date('d/m/Y') : '—' }}</div>
                <div class="text-xs text-gray-500">{{ m.createdAt ? m.createdAt|date('H:i') : '—' }}</div>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-right">
                <div class="flex items-center justify-end gap-1">
                  <a href="{{ path('admin_members_show', {id: m.id}) }}" class="inline-flex items-center justify-center w-8 h-8 rounded-lg text-sm transition-all duration-200 bg-blue-50 text-blue-600 hover:bg-blue-100" title="Voir">
                    <i class="fas fa-eye text-xs"></i>
                  </a>
                  <button class="inline-flex items-center justify-center w-8 h-8 rounded-lg text-sm transition-all duration-200 bg-green-50 text-green-600 hover:bg-green-100 hidden sm:inline-flex" title="Modifier">
                    <i class="fas fa-edit text-xs"></i>
                  </button>
                  <button class="inline-flex items-center justify-center w-8 h-8 rounded-lg text-sm transition-all duration-200 bg-red-50 text-red-600 hover:bg-red-100 hidden sm:inline-flex" title="Supprimer">
                    <i class="fas fa-trash text-xs"></i>
                  </button>
                </div>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="7" class="px-6 py-12 text-center">
                <div class="text-gray-500">
                  <i class="fas fa-users text-4xl mb-4"></i>
                  <p class="text-lg font-medium">Aucun membre trouvé</p>
                  <p class="text-sm">Essayez de modifier vos critères de recherche</p>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <!-- Advanced Pagination -->
    <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="text-sm text-gray-700">
            Affichage de <span class="font-medium">{{ ((page - 1) * size + 1) }}</span> à 
            <span class="font-medium">{{ (page * size > total) ? total : (page * size) }}</span> sur 
            <span class="font-medium">{{ total }}</span> résultats
          </div>
          <select class="admin-input text-sm w-auto" onchange="window.location.href='?q={{ q }}&country={{ country }}&role={{ role }}&page=1&size=' + this.value">
            <option value="20" {{ size == 20 ? 'selected' : '' }}>20 par page</option>
            <option value="50" {{ size == 50 ? 'selected' : '' }}>50 par page</option>
            <option value="100" {{ size == 100 ? 'selected' : '' }}>100 par page</option>
          </select>
        </div>
        
        <div class="flex items-center space-x-1">
          {% set prev = page > 1 ? page - 1 : 1 %}
          {% set next = page < pages ? page + 1 : pages %}
          
          <a href="?q={{ q }}&country={{ country }}&role={{ role }}&page=1&size={{ size }}" 
             class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-sm font-medium transition-all duration-200 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 {{ page == 1 ? 'opacity-50 cursor-not-allowed' : '' }}">
            <i class="fas fa-angle-double-left"></i>
          </a>
          
          <a href="?q={{ q }}&country={{ country }}&role={{ role }}&page={{ prev }}&size={{ size }}" 
             class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-sm font-medium transition-all duration-200 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 {{ page == 1 ? 'opacity-50 cursor-not-allowed' : '' }}">
            <i class="fas fa-angle-left"></i>
          </a>
          
          {% for p in range(max(1, page - 2), min(pages + 1, page + 3)) %}
            <a href="?q={{ q }}&country={{ country }}&role={{ role }}&page={{ p }}&size={{ size }}" 
               class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-sm font-medium transition-all duration-200 {{ p == page ? 'bg-gradient-to-r from-green-600 to-orange-500 text-white shadow-lg' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50' }}">
              {{ p }}
            </a>
          {% endfor %}
          
          <a href="?q={{ q }}&country={{ country }}&role={{ role }}&page={{ next }}&size={{ size }}" 
             class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-sm font-medium transition-all duration-200 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 {{ page == pages ? 'opacity-50 cursor-not-allowed' : '' }}">
            <i class="fas fa-angle-right"></i>
          </a>
          
          <a href="?q={{ q }}&country={{ country }}&role={{ role }}&page={{ pages }}&size={{ size }}" 
             class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-sm font-medium transition-all duration-200 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 {{ page == pages ? 'opacity-50 cursor-not-allowed' : '' }}">
            <i class="fas fa-angle-double-right"></i>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bulk Actions Modal (Hidden by default) -->
  <div id="bulkActionsModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 max-w-md w-full p-6">
        <h3 class="text-lg font-semibold mb-4">Actions en lot</h3>
        <div class="space-y-3">
          <button class="w-full inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500 text-left">
            <i class="fas fa-envelope"></i>
            Envoyer un email
          </button>
          <button class="w-full inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500 text-left">
            <i class="fas fa-download"></i>
            Exporter la sélection
          </button>
          <button class="w-full inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-red-600 border border-red-300 hover:bg-red-50 hover:border-red-500 text-left">
            <i class="fas fa-trash"></i>
            Supprimer
          </button>
        </div>
        <div class="mt-6 flex justify-end space-x-3">
          <button onclick="document.getElementById('bulkActionsModal').classList.add('hidden')" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500">
            Annuler
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Bulk selection functionality
    document.addEventListener('DOMContentLoaded', function() {
      const selectAllCheckbox = document.querySelector('thead input[type="checkbox"]');
      const rowCheckboxes = document.querySelectorAll('tbody input[type="checkbox"]');
      
      selectAllCheckbox?.addEventListener('change', function() {
        rowCheckboxes.forEach(checkbox => {
          checkbox.checked = this.checked;
        });
        updateBulkActions();
      });
      
      rowCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateBulkActions);
      });
      
      function updateBulkActions() {
        const checkedBoxes = document.querySelectorAll('tbody input[type="checkbox"]:checked');
        const bulkActionsBtn = document.getElementById('bulkActionsBtn');
        
        if (checkedBoxes.length > 0) {
          if (!bulkActionsBtn) {
            const btn = document.createElement('button');
            btn.id = 'bulkActionsBtn';
            btn.className = 'inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-gradient-to-r from-green-600 to-orange-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl';
            btn.innerHTML = `<i class="fas fa-tasks mr-2"></i>Actions (${checkedBoxes.length})`;
            btn.onclick = () => document.getElementById('bulkActionsModal').classList.remove('hidden');
            document.querySelector('.flex.items-center.space-x-3').appendChild(btn);
          } else {
            bulkActionsBtn.innerHTML = `<i class="fas fa-tasks mr-2"></i>Actions (${checkedBoxes.length})`;
          }
        } else {
          document.getElementById('bulkActionsBtn')?.remove();
        }
      }
    });
  </script>
{% endblock %}

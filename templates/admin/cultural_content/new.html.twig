{% extends 'admin/base.html.twig' %}

{% block title %}Nouveau Contenu{% endblock %}

{% block admin_body %}
  <div class="min-h-screen p-6">
    {# Back Button #}
    <div class="mb-6">
      <a href="{{ path('admin_cultural_content_index') }}" class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors">
        <i class="fas fa-arrow-left"></i>
        <span>Retour √† la galerie</span>
      </a>
    </div>

    {# Header #}
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-6">
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">
        <i class="fas fa-plus text-green-500 mr-2"></i>Ajouter un contenu culturel
      </h1>
      <p class="text-sm md:text-base text-gray-600">Photos, vid√©os, √©v√©nements ou lieux historiques</p>
    </div>

    {# Form #}
    <form method="post" enctype="multipart/form-data" class="space-y-6">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {# Main Form #}
        <div class="lg:col-span-2 space-y-6">
          {# Basic Info #}
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">
              <i class="fas fa-info-circle text-blue-500 mr-2"></i>Informations de base
            </h2>
            
            <div class="space-y-4">
              <div>
                <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                  Titre *
                </label>
                <input type="text" id="title" name="title" required
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                       placeholder="Ex: Porte du Non-Retour">
              </div>
              

              <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                  Description
                </label>
                <textarea id="description" name="description" rows="5"
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                          placeholder="D√©crivez ce contenu..."></textarea>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="type" class="block text-sm font-medium text-gray-700 mb-2">
                    Type *
                  </label>
                  <select id="type" name="type" required
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all">
                    <option value="">-- Choisir --</option>
                    <option value="photo">üì∑ Photo</option>
                    <option value="video">üé• Vid√©o</option>
                    <option value="event">üìÖ √âv√©nement</option>
                    <option value="place">üìç Lieu</option>
                  </select>
                </div>

                <div>
                  <label for="country" class="block text-sm font-medium text-gray-700 mb-2">
                    Pays
                  </label>
                  <input type="text" id="country" name="country"
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                         placeholder="Ex: B√©nin">
                </div>
              </div>
            </div>
          </div>

          {# Media Upload #}
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">
              <i class="fas fa-image text-purple-500 mr-2"></i>M√©dia
            </h2>

            <div class="space-y-4">
              <div>
                <label for="image" class="block text-sm font-medium text-gray-700 mb-2">
                  Image
                </label>
                <div class="relative">
                  <input type="file" id="image" name="image" accept="image/*"
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all">
                  <p class="mt-2 text-sm text-gray-500">
                    <i class="fas fa-info-circle mr-1"></i>
                    Formats accept√©s: JPG, PNG, GIF (max 5MB)
                  </p>
                </div>
              </div>

              <div id="video-url-field" style="display: none;">
                <label for="video_url" class="block text-sm font-medium text-gray-700 mb-2">
                  URL de la vid√©o (YouTube, Vimeo, etc.)
                </label>
                <input type="url" id="video_url" name="video_url"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                       placeholder="https://www.youtube.com/watch?v=...">
              </div>
            </div>
          </div>
        </div>

        {# Sidebar #}
        <div class="space-y-6">
          {# Preview #}
          <div class="bg-gradient-to-br from-green-50 to-orange-50 rounded-2xl shadow-lg border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              <i class="fas fa-eye text-green-500 mr-2"></i>Aper√ßu
            </h3>
            <div id="preview" class="aspect-video bg-white rounded-lg flex items-center justify-center border-2 border-dashed border-gray-300">
              <div class="text-center text-gray-400">
                <i class="fas fa-image text-4xl mb-2"></i>
                <p class="text-sm">Aucun aper√ßu</p>
              </div>
            </div>
          </div>

          {# Tips #}
          <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg">
            <div class="flex items-start">
              <i class="fas fa-lightbulb text-blue-500 mt-1 mr-3"></i>
              <div class="text-sm text-blue-700">
                <p class="font-medium mb-1">Conseils :</p>
                <ul class="list-disc list-inside space-y-1">
                  <li>Utilisez des images de haute qualit√©</li>
                  <li>R√©digez des descriptions d√©taill√©es</li>
                  <li>Ajoutez le contexte historique</li>
                  <li>Mentionnez la localisation pr√©cise</li>
                </ul>
              </div>
            </div>
          </div>

          {# Actions #}
          <div class="space-y-3">
            <button type="submit" 
                    class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-gradient-to-r from-green-600 to-orange-500 text-white rounded-xl font-semibold shadow-lg hover:-translate-y-0.5 hover:shadow-xl transition-all">
              <i class="fas fa-check"></i>
              Publier
            </button>
            <a href="{{ path('admin_cultural_content_index') }}" 
               class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-white text-gray-700 border border-gray-300 rounded-xl font-semibold hover:bg-gray-50 transition-all">
              <i class="fas fa-times"></i>
              Annuler
            </a>
          </div>
        </div>
      </div>
    </form>
  </div>

  <script>
    // Show/hide video URL field based on type
    document.getElementById('type').addEventListener('change', function() {
      const videoField = document.getElementById('video-url-field');
      if (this.value === 'video') {
        videoField.style.display = 'block';
      } else {
        videoField.style.display = 'none';
      }
    });

    // Image preview
    document.getElementById('image').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          document.getElementById('preview').innerHTML = 
            '<img src="' + e.target.result + '" class="w-full h-full object-cover rounded-lg">';
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
{% endblock %}

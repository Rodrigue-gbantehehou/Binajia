{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le contenu{% endblock %}

{% block admin_body %}
  <div class="space-y-6">
    {# Back Button #}
    <div>
      <a href="{{ path('admin_cultural_content_show', {id: content.id}) }}" class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors">
        <i class="fas fa-arrow-left"></i>
        <span>Retour au contenu</span>
      </a>
    </div>

    {# Header #}
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">
        <i class="fas fa-edit text-blue-500 mr-2"></i>Modifier le contenu culturel
      </h1>
      <p class="text-sm md:text-base text-gray-600">Mettez √† jour les informations du contenu</p>
    </div>

    {# Form #}
    <form method="post" enctype="multipart/form-data" class="space-y-6">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {# Main Form #}
        <div class="lg:col-span-2 space-y-6">
          {# Basic Info #}
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">
              <i class="fas fa-info-circle text-blue-500 mr-2"></i>Informations de base
            </h2>

            <div class="space-y-4">
              <div>
                <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                  Titre *
                </label>
                <input type="text" id="title" name="title" value="{{ content.title }}" required
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                       placeholder="Ex: Porte du Non-Retour">
              </div>

              <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                  Description
                </label>
                <textarea id="description" name="description" rows="5"
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                          placeholder="D√©crivez ce contenu...">{{ content.description }}</textarea>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="type" class="block text-sm font-medium text-gray-700 mb-2">
                    Type *
                  </label>
                  <select id="type" name="type" required
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all">
                    <option value="">-- Choisir --</option>
                    <option value="photo" {{ content.type == 'photo' ? 'selected' : '' }}>üì∑ Photo</option>
                    <option value="video" {{ content.type == 'video' ? 'selected' : '' }}>üé• Vid√©o</option>
                    <option value="event" {{ content.type == 'event' ? 'selected' : '' }}>üìÖ √âv√©nement</option>
                    <option value="place" {{ content.type == 'place' ? 'selected' : '' }}>üìç Lieu</option>
                  </select>
                </div>

                <div>
                  <label for="country" class="block text-sm font-medium text-gray-700 mb-2">
                    Pays
                  </label>
                  <input type="text" id="country" name="country" value="{{ content.country }}"
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                         placeholder="Ex: B√©nin">
                </div>
              </div>
            </div>
          </div>

          {# Media Upload #}
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">
              <i class="fas fa-image text-purple-500 mr-2"></i>M√©dia
            </h2>

            <div class="space-y-4">
              {# Current Image Display #}
              {% if content.image %}
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-2">Image actuelle</label>
                  <div class="relative">
                    <img src="{{ path('secure_upload', {'filename': content.image}) }}" alt="{{ content.title }}" class="w-full max-w-md h-48 object-cover rounded-lg border border-gray-300">
                    <div class="absolute top-2 left-2">
                      <span class="px-2 py-1 text-xs font-medium bg-green-500 text-white rounded-full">
                        <i class="fas fa-check mr-1"></i>Image actuelle
                      </span>
                    </div>
                  </div>
                </div>
              {% endif %}

              <div>
                <label for="image" class="block text-sm font-medium text-gray-700 mb-2">
                  {{ content.image ? 'Remplacer l\'image' : 'Ajouter une image' }}
                </label>
                <div class="relative">
                  <input type="file" id="image" name="image" accept="image/*"
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all">
                  <p class="mt-2 text-sm text-gray-500">
                    <i class="fas fa-info-circle mr-1"></i>
                    Formats accept√©s: JPG, PNG, GIF (max 5MB). Laissez vide pour garder l'image actuelle.
                  </p>
                </div>
              </div>

              <div id="video-url-field" style="{{ content.type == 'video' ? 'display: block;' : 'display: none;' }}">
                <label for="video_url" class="block text-sm font-medium text-gray-700 mb-2">
                  URL de la vid√©o (YouTube, Vimeo, etc.)
                </label>
                <input type="url" id="video_url" name="video_url" value="{{ content.videoUrl }}"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                       placeholder="https://www.youtube.com/watch?v=...">
              </div>
            </div>
          </div>
        </div>

        {# Sidebar #}
        <div class="space-y-6">
          {# Preview #}
          <div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-2xl shadow-lg border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              <i class="fas fa-eye text-blue-500 mr-2"></i>Aper√ßu
            </h3>
            <div id="preview" class="aspect-video bg-white rounded-lg flex items-center justify-center border-2 border-dashed border-gray-300">
              {% if content.image %}
                <img src="{{ path('secure_upload', {'filename': content.image}) }}" alt="{{ content.title }}" class="w-full h-full object-cover rounded-lg">
              {% else %}
                <div class="text-center text-gray-400">
                  <i class="fas fa-image text-4xl mb-2"></i>
                  <p class="text-sm">Aucun aper√ßu</p>
                </div>
              {% endif %}
            </div>
          </div>

          {# Tips #}
          <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg">
            <div class="flex items-start">
              <i class="fas fa-lightbulb text-blue-500 mt-1 mr-3"></i>
              <div class="text-sm text-blue-700">
                <p class="font-medium mb-1">Conseils de modification :</p>
                <ul class="list-disc list-inside space-y-1">
                  <li>V√©rifiez les informations avant de publier</li>
                  <li>Les modifications sont imm√©diates</li>
                  <li>L'image actuelle sera conserv√©e si non remplac√©e</li>
                  <li>Tous les champs sont optionnels sauf le titre</li>
                </ul>
              </div>
            </div>
          </div>

          {# Actions #}
          <div class="space-y-3">
            <button type="submit"
                    class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-500 text-white rounded-xl font-semibold shadow-lg hover:-translate-y-0.5 hover:shadow-xl transition-all">
              <i class="fas fa-save"></i>
              Mettre √† jour
            </button>
            <a href="{{ path('admin_cultural_content_show', {id: content.id}) }}"
               class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-white text-gray-700 border border-gray-300 rounded-xl font-semibold hover:bg-gray-50 transition-all">
              <i class="fas fa-times"></i>
              Annuler
            </a>
          </div>
        </div>
      </div>

      {# CSRF Token #}
      <input type="hidden" name="_token" value="{{ csrf_token('edit_content_' ~ content.id) }}">
    </form>
  </div>

  <script>
    // Show/hide video URL field based on type
    document.getElementById('type').addEventListener('change', function() {
      const videoField = document.getElementById('video-url-field');
      if (this.value === 'video') {
        videoField.style.display = 'block';
      } else {
        videoField.style.display = 'none';
      }
    });

    // Image preview for new uploads
    document.getElementById('image').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          const preview = document.getElementById('preview');
          preview.innerHTML = '<img src="' + e.target.result + '" class="w-full h-full object-cover rounded-lg">';
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
{% endblock %}

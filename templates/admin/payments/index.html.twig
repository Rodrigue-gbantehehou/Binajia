{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Paiements{% endblock %}

{% block admin_body %}
  <div class="space-y-6">
    {# Header Section #}
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
          <i class="fas fa-credit-card text-orange-500 mr-3"></i>Gestion des Paiements
        </h1>
        <p class="text-gray-600">Suivez et gérez toutes les transactions financières</p>
      </div>
      <div class="flex items-center gap-3">
        <a class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 hover:border-green-500" href="{{ path('admin_payments_export', {status: status, from: from, to: to}) }}">
          <i class="fas fa-download"></i>Exporter CSV
        </a>
        <button class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 bg-gradient-to-r from-green-600 to-orange-500 text-white shadow-lg hover:-translate-y-0.5 hover:shadow-xl">
          <i class="fas fa-plus"></i>Nouveau Paiement
        </button>
      </div>
    </div>

    {# Quick Stats #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 bg-gradient-to-br from-green-50 to-green-100 border-l-4 border-green-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
              <i class="fas fa-check-circle text-white text-xl"></i>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-green-600">Paiements Réussis</p>
            <p class="text-2xl font-bold text-green-900">{{ payments|filter(p => p.status in ['approved','succeeded','success','paid'])|length }}</p>
          </div>
        </div>
      </div>
      
      <div class="admin-card bg-gradient-to-br from-orange-50 to-orange-100 border-l-4 border-orange-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
              <i class="fas fa-clock text-white text-xl"></i>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-orange-600">En Attente</p>
            <p class="text-2xl font-bold text-orange-900">{{ payments|filter(p => p.status == 'pending')|length }}</p>
          </div>
        </div>
      </div>
      
      <div class="admin-card bg-gradient-to-br from-red-50 to-red-100 border-l-4 border-red-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-red-500 rounded-lg flex items-center justify-center">
              <i class="fas fa-times-circle text-white text-xl"></i>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-red-600">Échoués</p>
            <p class="text-2xl font-bold text-red-900">{{ payments|filter(p => p.status in ['failed','canceled'])|length }}</p>
          </div>
        </div>
      </div>
      
      <div class="admin-card bg-gradient-to-br from-blue-50 to-blue-100 border-l-4 border-blue-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
              <i class="fas fa-euro-sign text-white text-xl"></i>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-blue-600">Montant Total</p>
            <p class="text-2xl font-bold text-blue-900">€ 12,450</p>
          </div>
        </div>
      </div>
    </div>

    {# Advanced Filters #}
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">
          <i class="fas fa-filter text-orange-500 mr-2"></i>Filtres Avancés
        </h3>
        <button id="toggleFilters" class="text-sm text-gray-500 hover:text-gray-700">
          <i class="fas fa-chevron-down"></i>
        </button>
      </div>
      
      <form method="get" class="space-y-4" id="filtersForm">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Recherche</label>
            <div class="relative">
              <input type="text" name="q" value="{{ q }}" 
                     placeholder="Nom, email, référence..." 
                     class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
              <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Statut</label>
            <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
              <option value="">Tous les statuts</option>
              {% set statuses = ['approved','succeeded','success','paid','pending','failed','canceled'] %}
              {% for s in statuses %}
                <option value="{{ s }}" {{ status == s ? 'selected' : '' }}>{{ s|capitalize }}</option>
              {% endfor %}
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Date de début</label>
            <input type="date" name="from" value="{{ from }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Date de fin</label>
            <input type="date" name="to" value="{{ to }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
          </div>
          
          <div class="flex items-end">
            <button type="submit" class="admin-btn admin-btn-primary w-full">
              <i class="fas fa-search mr-2"></i>Filtrer
            </button>
          </div>
        </div>
      </form>
    </div>

    {# Payments Table #}
    <div class="admin-card p-0 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
            <tr>
              <th class="px-6 py-4 text-left">
                <input type="checkbox" id="selectAll" class="rounded border-gray-300 text-green-600 focus:ring-green-500">
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center cursor-pointer hover:text-gray-700">
                  Transaction
                  <i class="fas fa-sort ml-2 text-gray-400"></i>
                </div>
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center cursor-pointer hover:text-gray-700">
                  Membre
                  <i class="fas fa-sort ml-2 text-gray-400"></i>
                </div>
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center cursor-pointer hover:text-gray-700">
                  Montant
                  <i class="fas fa-sort ml-2 text-gray-400"></i>
                </div>
              </th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {% for p in payments %}
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4">
                  <input type="checkbox" class="payment-checkbox rounded border-gray-300 text-green-600 focus:ring-green-500" value="{{ p.id }}">
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center mr-4">
                      <i class="fas fa-credit-card text-white text-lg"></i>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-900">{{ p.reference ?: 'Référence manquante' }}</div>
                      <div class="text-sm text-gray-500">ID: {{ p.id }}</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {% if p.user %}
                    <div class="flex items-center">
                      <div class="w-8 h-8 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center mr-3">
                        <span class="text-white text-sm font-medium">{{ p.user.firstname|first|upper }}</span>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-900">{{ p.user.firstname }} {{ p.user.lastname }}</div>
                        <div class="text-sm text-gray-500">{{ p.user.email|default('—') }}</div>
                      </div>
                    </div>
                  {% else %}
                    <span class="text-gray-400 italic">Membre non assigné</span>
                  {% endif %}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {% if p.amount %}
                    <div class="text-lg font-bold text-gray-900">€ {{ p.amount|number_format(2, ',', ' ') }}</div>
                  {% else %}
                    <span class="text-gray-400">—</span>
                  {% endif %}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {% if p.status in ['approved','succeeded','success','paid'] %}
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                      <i class="fas fa-check-circle mr-2"></i>Réussi
                    </span>
                  {% elseif p.status == 'pending' %}
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
                      <i class="fas fa-clock mr-2"></i>En attente
                    </span>
                  {% elseif p.status in ['failed','canceled'] %}
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                      <i class="fas fa-times-circle mr-2"></i>Échoué
                    </span>
                  {% else %}
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                      <i class="fas fa-question mr-2"></i>{{ p.status|capitalize ?: 'Inconnu' }}
                    </span>
                  {% endif %}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {% if p.paymentdate %}
                    <div class="text-sm text-gray-900">{{ p.paymentdate|date('d/m/Y') }}</div>
                    <div class="text-sm text-gray-500">{{ p.paymentdate|date('H:i') }}</div>
                  {% else %}
                    <span class="text-gray-400">—</span>
                  {% endif %}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end gap-2">
                    <a href="{{ path('admin_payments_show', {id: p.id}) }}" 
                       class="text-green-600 hover:text-green-900 transition-colors duration-150"
                       title="Voir les détails">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="#" class="text-blue-600 hover:text-blue-900 transition-colors duration-150" title="Modifier">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a href="#" class="text-orange-600 hover:text-orange-900 transition-colors duration-150" title="Reçu">
                      <i class="fas fa-receipt"></i>
                    </a>
                    {% if p.status == 'pending' %}
                      <a href="#" class="text-green-600 hover:text-green-900 transition-colors duration-150" title="Approuver">
                        <i class="fas fa-check"></i>
                      </a>
                      <a href="#" class="text-red-600 hover:text-red-900 transition-colors duration-150" title="Rejeter">
                        <i class="fas fa-times"></i>
                      </a>
                    {% endif %}
                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="7" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center">
                    <i class="fas fa-credit-card text-gray-300 text-4xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun paiement trouvé</h3>
                    <p class="text-gray-500">Aucune transaction ne correspond à vos critères.</p>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

    {# Advanced Pagination #}
    {% if pages > 1 %}
      <div class="admin-card">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-4">
            <div class="text-sm text-gray-700">
              Affichage de <span class="font-medium">{{ ((page - 1) * size) + 1 }}</span> à 
              <span class="font-medium">{{ ((page - 1) * size) + payments|length }}</span> sur 
              <span class="font-medium">{{ total }}</span> résultats
            </div>
            <select name="size" onchange="changePageSize(this.value)" class="text-sm border border-gray-300 rounded px-2 py-1 focus:ring-2 focus:ring-green-500 focus:border-green-500">
              <option value="10" {{ size == 10 ? 'selected' : '' }}>10 par page</option>
              <option value="25" {{ size == 25 ? 'selected' : '' }}>25 par page</option>
              <option value="50" {{ size == 50 ? 'selected' : '' }}>50 par page</option>
              <option value="100" {{ size == 100 ? 'selected' : '' }}>100 par page</option>
            </select>
          </div>
          
          <div class="flex items-center gap-1">
            {% set prev = page > 1 ? page - 1 : 1 %}
            {% set next = page < pages ? page + 1 : pages %}
            
            <a href="?q={{ q }}&status={{ status }}&from={{ from }}&to={{ to }}&page=1&size={{ size }}" 
               class="admin-btn admin-btn-sm {{ page == 1 ? 'opacity-50 cursor-not-allowed' : '' }}">
              <i class="fas fa-angle-double-left"></i>
            </a>
            <a href="?q={{ q }}&status={{ status }}&from={{ from }}&to={{ to }}&page={{ prev }}&size={{ size }}" 
               class="admin-btn admin-btn-sm {{ page == 1 ? 'opacity-50 cursor-not-allowed' : '' }}">
              <i class="fas fa-angle-left"></i>
            </a>
            
            {% for p in range(max(1, page - 2), min(pages, page + 2)) %}
              <a href="?q={{ q }}&status={{ status }}&from={{ from }}&to={{ to }}&page={{ p }}&size={{ size }}" 
                 class="admin-btn admin-btn-sm {{ p == page ? 'admin-btn-primary' : '' }}">
                {{ p }}
              </a>
            {% endfor %}
            
            <a href="?q={{ q }}&status={{ status }}&from={{ from }}&to={{ to }}&page={{ next }}&size={{ size }}" 
               class="admin-btn admin-btn-sm {{ page == pages ? 'opacity-50 cursor-not-allowed' : '' }}">
              <i class="fas fa-angle-right"></i>
            </a>
            <a href="?q={{ q }}&status={{ status }}&from={{ from }}&to={{ to }}&page={{ pages }}&size={{ size }}" 
               class="admin-btn admin-btn-sm {{ page == pages ? 'opacity-50 cursor-not-allowed' : '' }}">
              <i class="fas fa-angle-double-right"></i>
            </a>
          </div>
        </div>
      </div>
    {% endif %}
  </div>

  {# JavaScript for interactivity #}
  <script>
    // Filter toggle
    document.getElementById('toggleFilters').addEventListener('click', function() {
      const form = document.getElementById('filtersForm');
      const icon = this.querySelector('i');
      
      if (form.style.display === 'none') {
        form.style.display = 'block';
        icon.classList.remove('fa-chevron-down');
        icon.classList.add('fa-chevron-up');
      } else {
        form.style.display = 'none';
        icon.classList.remove('fa-chevron-up');
        icon.classList.add('fa-chevron-down');
      }
    });

    // Change page size
    function changePageSize(size) {
      const url = new URL(window.location);
      url.searchParams.set('size', size);
      url.searchParams.set('page', '1');
      window.location = url;
    }

    // Bulk selection functionality
    document.getElementById('selectAll').addEventListener('change', function() {
      const checkboxes = document.querySelectorAll('.payment-checkbox');
      checkboxes.forEach(checkbox => {
        checkbox.checked = this.checked;
      });
    });

    // Individual checkbox handling
    document.querySelectorAll('.payment-checkbox').forEach(checkbox => {
      checkbox.addEventListener('change', function() {
        const checkedBoxes = document.querySelectorAll('.payment-checkbox:checked');
        const selectAll = document.getElementById('selectAll');
        selectAll.checked = checkedBoxes.length === document.querySelectorAll('.payment-checkbox').length;
      });
    });

    // Animate cards on load
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.admin-card');
      cards.forEach((card, index) => {
        setTimeout(() => {
          card.style.opacity = '0';
          card.style.transform = 'translateY(20px)';
          card.style.transition = 'all 0.5s ease';
          
          setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
          }, 50);
        }, index * 100);
      });
    });
  </script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ place.title }} — Binajia{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-green-50 via-emerald-50 to-yellow-50">
    <!-- Hero Section avec image -->
    <section class="relative h-96 overflow-hidden">
      
            <img 
                src="{{ path('secure_upload', {'filename': place.image}) }}" 
                alt="{{ place.title }}" 
                class="w-full h-full object-cover"
            >
      
        
        <!-- Overlay gradient -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
        
        <!-- Navigation -->
        <div class="absolute top-0 left-0 right-0 z-10">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
                <a href="{{ path('app_places') }}" 
                   class="inline-flex items-center text-white/90 hover:text-white transition-colors group">
                    <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Retour aux lieux culturels
                </a>
            </div>
        </div>
        
        <!-- Titre sur l'image -->
        <div class="absolute bottom-0 left-0 right-0 z-10">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
                <div class="max-w-3xl">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight">
                        {{ place.title }}
                    </h1>
                    <div class="flex items-center text-white/90 text-lg">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        {{ place.country }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contenu principal -->
    <section class="py-16">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-3 gap-12">
                <!-- Colonne de contenu principal -->
                <div class="lg:col-span-2">
                    <!-- Description -->
                    <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
                        <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                            <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            À propos
                        </h2>
                        <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
                            <p class="text-lg">{{ place.description }}</p>
                        </div>
                    </div>

                   
                
                </div>

                <!-- Sidebar -->
                <div class="space-y-6">
                    <!-- Carte de localisation -->
                 
                    <!-- Avantages membres -->
                    <div class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl shadow-lg p-6 text-white">
                        <h3 class="text-xl font-bold mb-3">Avantages membres</h3>
                        <ul class="space-y-3 mb-6">
                            <li class="flex items-center">
                                <svg class="w-5 h-5 text-yellow-300 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span>Réduction spéciale membre</span>
                            </li>
                            <li class="flex items-center">
                                <svg class="w-5 h-5 text-yellow-300 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span>Accès prioritaire</span>
                            </li>
                            <li class="flex items-center">
                                <svg class="w-5 h-5 text-yellow-300 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span>Visites guidées exclusives</span>
                            </li>
                        </ul>
                        <a href="{{ path('app_membership') }}" class="block w-full bg-yellow-400 text-gray-900 py-3 rounded-xl font-bold text-center hover:bg-yellow-500 transition-colors">
                            Devenir membre
                        </a>
                    </div>

                 
                </div>
            </div>
        </div>
    </section>

  
</div>

<!-- Modal pour la galerie -->
<div id="galleryModal" class="fixed inset-0 bg-black/90 z-50 hidden items-center justify-center p-4">
    <div class="relative max-w-4xl max-h-full">
        <button id="closeModal" class="absolute -top-12 right-0 text-white text-2xl hover:text-yellow-400 transition-colors">
            &times;
        </button>
        <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain">
    </div>
</div>



<script>
document.addEventListener('DOMContentLoaded', function() {
    // Galerie modale
    const galleryModal = document.getElementById('galleryModal');
    const modalImage = document.getElementById('modalImage');
    const closeModal = document.getElementById('closeModal');
    
    document.querySelectorAll('img[class*="cursor-zoom-in"]').forEach(img => {
        img.addEventListener('click', function() {
            modalImage.src = this.src;
            galleryModal.classList.remove('hidden');
            galleryModal.classList.add('flex');
            document.body.style.overflow = 'hidden';
        });
    });
    
    closeModal.addEventListener('click', function() {
        galleryModal.classList.add('hidden');
        galleryModal.classList.remove('flex');
        document.body.style.overflow = 'auto';
    });
    
    galleryModal.addEventListener('click', function(e) {
        if (e.target === galleryModal) {
            galleryModal.classList.add('hidden');
            galleryModal.classList.remove('flex');
            document.body.style.overflow = 'auto';
        }
    });
});
</script>
{% endblock %}
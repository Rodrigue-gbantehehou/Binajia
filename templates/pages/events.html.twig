{% extends 'base.html.twig' %}
{% block title %}Événements — Binajia{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
  .gradient-text {
    background: linear-gradient(90deg,#facc15,#22c55e);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .card-hover {
    transition: transform 0.4s, box-shadow 0.4s;
  }
  .card-hover:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
  }
</style>
{% endblock %}

{% block content %}
<!-- Hero Section avec mini-cards -->
<section class="relative h-[80vh] flex items-center justify-center bg-gradient-to-br from-green-800 via-green-700 to-amber-600 overflow-hidden">
  <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1540575467063-178a50c2df87?q=80&w=2070&auto=format&fit=crop')] bg-cover bg-center opacity-30"></div>
  <div class="relative z-10 text-center max-w-4xl px-6">
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold gradient-text leading-tight mb-4">Événements à Venir</h1>
    <p class="text-white text-lg md:text-xl mb-8">Découvrez l’Afrique autrement — entre racines, rencontres et rayonnement</p>
    <a href="#events" class="inline-block px-8 py-4 bg-yellow-400 hover:bg-yellow-500 rounded-full font-semibold text-gray-900 shadow-lg transition transform hover:-translate-y-1">Découvrir les événements</a>
  </div>

  <!-- Mini-cards flottantes -->
  <div class="absolute top-1/4 left-10 grid gap-4">
    {% for evenement in evenements|slice(0,3) %}
      {% set slug = evenement.title|lower|replace({" ": "-", "'": ""}) %}
      <a href="{{ path('app_event_show', {slug: slug}) }}" class="block w-60 rounded-2xl overflow-hidden card-hover shadow-lg bg-white">
        <img src="{{ evenement.image ? path('secure_upload', {'filename': evenement.image}) : 'https://images.unsplash.com/photo-1517457373958-b7bdd4587205?q=80&w=1400&auto=format&fit=crop' }}" class="w-full h-36 object-cover">
        <div class="p-3">
          <h3 class="font-semibold text-gray-900 text-lg">{{ evenement.title }}</h3>
          <p class="text-gray-500 text-sm truncate">{{ evenement.description }}</p>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

<!-- Section texte introductive -->
<section class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 space-y-12">
    <div class="text-center">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-charcoal mb-4">Ce que vous pouvez vivre avec Binajia</h2>
      <p class="text-gray-700 max-w-3xl mx-auto">Binajia vous invite à vivre des expériences uniques à travers des événements culturels, spirituels et éducatifs qui célèbrent l’histoire, la créativité et la diversité du continent.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h3 class="text-2xl font-semibold text-charcoal mb-3">Festivals culturels</h3>
        <p class="text-gray-600">Musique, danse, artisanat, gastronomie, spiritualité — des célébrations vibrantes qui mettent en lumière les traditions et les expressions contemporaines. Exemples : Festival Vodoun, Dak’Art, MASA, Afrikibar.</p>
      </div>
      <div>
        <h3 class="text-2xl font-semibold text-charcoal mb-3">Rencontres artistiques</h3>
        <p class="text-gray-600">Expositions, résidences, performances et ateliers créatifs avec des artistes africains et diasporiques.</p>
      </div>

      <div>
        <h3 class="text-2xl font-semibold text-charcoal mb-3">Forums et conférences</h3>
        <p class="text-gray-600">Des espaces de réflexion sur l’innovation, l’éducation, l’environnement, la coopération et les diasporas.</p>
      </div>
      <div>
        <h3 class="text-2xl font-semibold text-charcoal mb-3">Voyages guidés</h3>
        <p class="text-gray-600">Circuits personnalisés au Bénin, au Nigéria et dans d’autres pays africains, accompagnés par des guides certifiés. Thèmes : spiritualité, histoire, nature, patrimoine, entrepreneuriat.</p>
      </div>
    </div>
  </div>
</section>

<!-- Section grille événements -->
<section id="events" class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-serif font-bold text-charcoal mb-8 text-center">Nos prochains événements</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {% for evenement in evenements %}
        {% set slug = evenement.title|lower|replace({" ": "-", "'": ""}) %}
        {% set isFull = false %}
        <article class="rounded-2xl overflow-hidden bg-white shadow-sm card-hover">
          <div class="h-48 overflow-hidden">
            <a href="{{ path('app_event_show', {slug: slug}) }}">
              <img src="{{ evenement.image ? path('secure_upload', {'filename': evenement.image}) : 'https://images.unsplash.com/photo-1517457373958-b7bdd4587205?q=80&w=1400&auto=format&fit=crop' }}" class="w-full h-full object-cover">
            </a>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-charcoal hover:text-green-600 transition">
              <a href="{{ path('app_event_show', {slug: slug}) }}">{{ evenement.title }}</a>
            </h3>
            <p class="text-gray-500 text-sm mt-2 truncate">{{ evenement.description }}</p>
            <div class="mt-3 text-sm text-gray-500">
              <div>{{ evenement.startDate ? evenement.startDate|date('d F Y à H:i') : 'Date non définie' }}</div>
              <div>{{ evenement.location ?: 'Lieu non spécifié' }}</div>
              <div>
                {% if isFull %}
                  <span class="text-red-600 font-medium">0 places disponibles</span>
                {% else %}
                  <span class="text-green-700 font-medium">Places disponibles</span>
                {% endif %}
              </div>
            </div>
            <div class="mt-4 flex items-center justify-between">
              <div class="font-semibold text-charcoal">Gratuit</div>
              {% if isFull %}
                <button class="px-5 py-2 rounded-full bg-gray-200 text-gray-500 cursor-not-allowed">Complet</button>
              {% else %}
                <a href="{{ path('app_reservation_event', {'id': evenement.id}) }}" class="px-5 py-2 btn-primary">Réserver</a>
              {% endif %}
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}

{% extends 'base.html.twig' %}
{% block title %}Événements — Binajia{% endblock %}
{% block content %}
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="font-serif text-4xl font-bold text-charcoal">Événements à Venir</h1>
    <p class="mt-2 text-gray-600">Participez à nos événements culturels et vivez des expériences authentiques</p>

    <div class="mt-8 grid md:grid-cols-3 gap-6">
      {% for evenement in evenements %}
      {% set slug = evenement.title|lower|replace({" ": "-", "'": ""}) %}
      {% set isFull = false %} {# Pour l'instant, on considère qu'il n'y a pas de limite de places #}
      <article class="rounded-2xl overflow-hidden bg-white ring-1 ring-gray-200 card-hover">
        <div class="h-48 overflow-hidden">
          <a href="{{ path('app_event_show', {slug: slug}) }}">
            {% if evenement.image %}
              <img src="{{ path('secure_upload', {'filename': evenement.image}) }}" alt="" class="w-full h-full object-cover transition-transform duration-200 will-change-transform hover:scale-[1.01]">
            {% else %}
              <img src="https://images.unsplash.com/photo-1517457373958-b7bdd4587205?q=80&w=1400&auto=format&fit=crop" alt="" class="w-full h-full object-cover transition-transform duration-200 will-change-transform hover:scale-[1.01]">
            {% endif %}
          </a>
        </div>
        <div class="p-4">
          <div class="flex items-center gap-2 text-xs text-gray-500">
            <span class="px-2 py-0.5 rounded-full bg-neutral-100 ring-1 ring-gray-200">À venir</span>
            <span class="px-2 py-0.5 rounded-full bg-neutral-100 ring-1 ring-gray-200">{{ evenement.country ?: 'Bénin' }}</span>
          </div>
          <h3 class="mt-2 font-semibold text-charcoal"><a href="{{ path('app_event_show', {slug: slug}) }}" class="hover:text-primary">{{ evenement.title }}</a></h3>
          {% if evenement.description %}
            <p class="mt-1 text-sm text-gray-600">{{ evenement.description|slice(0, 100) }}{% if evenement.description|length > 100 %}...{% endif %}</p>
          {% endif %}
          <div class="mt-3 grid gap-1 text-sm text-gray-600">
            <div>{{ evenement.startDate ? evenement.startDate|date('d F Y à H:i') : 'Date non définie' }}</div>
            <div>{{ evenement.location ?: 'Lieu non spécifié' }}</div>
            <div>
              {% if isFull %}
                <span class="text-red-600 font-medium">0 places disponibles</span>
              {% else %}
                <span class="text-green-700 font-medium">Places disponibles</span>
              {% endif %}
            </div>
          </div>
          <div class="mt-4 flex items-center justify-between">
            <div class="font-semibold text-charcoal">Gratuit</div>
            {% if isFull %}
              <button class="px-5 py-2 rounded-full ring-1 ring-gray-300 text-gray-400 bg-neutral-50 cursor-not-allowed" aria-disabled="true">Complet</button>
            {% else %}
              <a href="{{ path('app_reservation_event', {'id': evenement.id}) }}" class="px-5 py-2 btn-primary">Réserver</a>
            {% endif %}
          </div>
        </div>
      </article>
      {% endfor %}
    </div>

    {% if evenements is empty %}
    <div class="mt-8 text-center py-12">
      <div class="text-gray-500 text-lg">Aucun événement prévu pour le moment.</div>
      <p class="text-gray-400 mt-2">Revenez bientôt pour découvrir nos prochains événements culturels !</p>
    </div>
    {% endif %}

    <div class="mt-12 rounded-2xl bg-neutral-50 ring-1 ring-gray-200 p-6">
      <h2 class="font-serif text-2xl font-bold text-charcoal">Avantages Membres</h2>
      <ul class="mt-3 grid sm:grid-cols-2 gap-3 text-gray-600">
        <li>• Tarifs réduits sur une sélection d'événements</li>
        <li>• Accès prioritaire aux réservations</li>
        <li>• Invitations à des événements privés</li>
        <li>• Réductions partenaires (hôtels, visites)</li>
      </ul>
      <div class="mt-4">
        <a href="{{ path('app_user_dashboard') }}" class="btn-primary px-6 py-3 inline-block">Devenir membre</a>
      </div>
    </div>

  </div>
</section>
{% endblock %}

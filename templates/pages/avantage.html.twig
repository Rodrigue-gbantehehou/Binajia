                {% for avantage in avantages %}
                <div class="group bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 overflow-hidden">
                    <div class="p-8">
                        <div class="w-20 h-20 bg-gradient-to-br from-{{ avantage.color }}-100 to-{{ avantage.color }}-50 rounded-2xl flex items-center justify-center mb-6 mx-auto transform group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-10 h-10 text-{{ avantage.color }}-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ avantage.icon }}"/>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-center mb-4 text-gray-800 group-hover:text-{{ avantage.color }}-600 transition-colors">
                            {{ avantage.title }}
                        </h3>
                        <p class="text-gray-600 text-center leading-relaxed">
                            {{ avantage.description }}
                        </p>
                    </div>
                    <div class="h-1 bg-gradient-to-r from-{{ avantage.color }}-400 to-{{ avantage.color }}-600 transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Pourquoi nous rejoindre -->
    <section class="py-20 bg-gradient-to-br from-green-600 via-emerald-600 to-green-700 text-white relative overflow-hidden">
        <div class="absolute inset-0 opacity-10">
            <div class="absolute top-0 right-0 w-64 h-64 bg-yellow-300 rounded-full blur-3xl"></div>
            <div class="absolute bottom-0 left-0 w-96 h-96 bg-green-400 rounded-full blur-3xl"></div>
        </div>

        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-6xl mx-auto text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-black mb-6 text-4xl md:text-5xl font-bold text-gray-900 drop-shadow-lg font-extrabold mb-6 leading-tight bg-gradient-to-r from-green-500 via-yellow-500 to-green-500 bg-clip-text text-transparent">
                    Pourquoi devenir membre ?
                </h2>
                <p class="text-xl text-white/80 max-w-2xl mx-auto">
                    Découvrez les raisons qui font de Binajia une communauté unique
                </p>
            </div>
            
            <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                {% set raisons = [
                    {
                        icon: 'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
                        title: 'Vivre l\'Afrique autrement',
                        description: 'Entre authenticité, engagement et rayonnement'
                    },
                    {
                        icon: 'M13 10V3L4 14h7v7l9-11h-7z',
                        title: 'Un mouvement porteur',
                        description: 'Enraciné dans nos valeurs, ouvert sur le monde'
                    },
                    {
                        icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
                        title: 'Grandir ensemble',
                        description: 'Dans le respect des cultures et des mémoires'
                    }
                ] %}

                {% for raison in raisons %}
                <div class="group text-center p-8 rounded-2xl bg-white/10 backdrop-blur-sm hover:bg-white/20 transition-all duration-500 transform hover:scale-105 border border-white/20">
                    <div class="w-24 h-24 bg-yellow-400/20 rounded-2xl flex items-center justify-center mb-6 mx-auto transform group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-12 h-12 text-yellow-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ raison.icon }}"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold mb-4 text-white">{{ raison.title }}</h3>
                    <p class="text-yellow-100 text-lg leading-relaxed">{{ raison.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>


    <!-- CTA Final -->
    <section class="py-20 bg-gradient-to-br from-green-50 via-white to-yellow-50">
        <div class="container mx-auto px-4 text-center">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-4xl md:text-5xl font-black text-gray-800 mb-6 text-4xl md:text-5xl font-bold text-gray-900 drop-shadow-lg font-extrabold mb-6 leading-tight bg-gradient-to-r from-green-500 via-yellow-500 to-green-500 bg-clip-text text-transparent">
                    Rejoignez l'aventure Binajia
                </h2>
                <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
                    Portez la carte. Partagez la vision. Construisons ensemble l'Afrique de demain.
                </p>
                
                <div class="flex flex-col sm:flex-row justify-center gap-6">
                    <a href="{{ path('app_membership') }}" 
                       class="group inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-yellow-400 to-yellow-500 hover:from-yellow-500 hover:to-yellow-600 text-gray-900 font-bold rounded-2xl text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                        <span class="flex items-center">
                            Devenir membre
                            <svg class="ml-3 w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                            </svg>

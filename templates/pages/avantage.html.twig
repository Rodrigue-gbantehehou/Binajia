                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ avantage.icon }}"/>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-center mb-4 text-gray-800 group-hover:text-{{ avantage.color }}-600 transition-colors">
                            {{ avantage.title }}
                        </h3>
                        <p class="text-gray-600 text-center leading-relaxed">
                            {{ avantage.description }}
                        </p>
                    </div>
                    <div class="h-1 bg-gradient-to-r from-{{ avantage.color }}-400 to-{{ avantage.color }}-600 transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Tableau de comparaison RESPONSIVE -->
    <section class="py-12 px-4 bg-white">
        <div class="max-w-6xl mx-auto">
            <!-- Titre de la section -->
            <div class="text-center mb-12">
                <h2 class="font-serif text-3xl md:text-4xl font-bold drop-shadow-lg bg-gradient-to-r from-primary via-yellow-500 to-primary bg-clip-text text-transparent mb-4">
                    Comparez nos formules
                </h2>
                <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                    Découvrez tous les avantages de chaque formule et choisissez celle qui correspond le mieux à vos besoins
                </p>
            </div>

            <!-- Tableau de comparaison - Version Desktop -->
            <div class="hidden md:block bg-white rounded-2xl shadow-xl overflow-hidden">
                <!-- En-tête du tableau -->
                <div class="grid grid-cols-4 border-b border-gray-200">
                    <div class="p-8 bg-gray-50">
                        <h3 class="font-bold text-lg text-gray-500 mb-4">Principaux avantages</h3>
                        <div class="text-2xl font-bold text-charcoal">Tarif membre</div>
                    </div>
                    
                    <!-- Adhérent -->
                    <div class="p-8 text-center border-l border-gray-200">
                        <div class="w-16 h-16 bg-secondary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
                            </svg>
                        </div>
                        <h4 class="font-bold text-xl text-charcoal mb-2">Adhérent</h4>
                        <div class="text-3xl font-bold text-secondary mb-2">5 000 FCFA</div>
                        <p class="text-sm text-gray-600">Par an</p>
                    </div>

                    <!-- Membre Prestige -->
                    <div class="p-8 text-center border-l border-gray-200 relative bg-primary/5">
                        <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                            </svg>
                        </div>
                        <h4 class="font-bold text-xl text-charcoal mb-2">Membre Prestige</h4>
                        <div class="text-3xl font-bold text-primary mb-2">15 000 FCFA</div>
                        <p class="text-sm text-gray-600">Par an</p>
                    </div>

                    <!-- Membre VIP -->
                    <div class="p-8 text-center border-l border-gray-200">
                        <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                            </svg>
                        </div>
                        <h4 class="font-bold text-xl text-charcoal mb-2">Membre VIP</h4>
                        <div class="text-3xl font-bold text-yellow-500 mb-2">30 000 FCFA</div>
                        <p class="text-sm text-gray-600">Par an</p>
                    </div>
                </div>

                <!-- Corps du tableau - Avantages -->
                <div class="divide-y divide-gray-100">
                    {% set avantages_tableau = [
                        { nom: "Bonus sur les réservations", adherent: "-10%", prestige: "-15%", vip: "-25%" },
                        { nom: "Accès aux événements", adherent: "✓ Publics uniquement", prestige: "✓ Événements exclusifs", vip: "✓ Accès VVIP festivals" },
                        { nom: "Carte membre", adherent: "✓ Standard", prestige: "✓ Premium", vip: "✓ VIP Métallique" },
                        { nom: "Support client", adherent: "Standard", prestige: "✓ Prioritaire", vip: "✓ Premium 24/7" },
                        { nom: "Arrivée/Départ flexible", adherent: "-", prestige: "Départ tardif", vip: "Arrivée + Départ" },
                        { nom: "Accès partenaires", adherent: "Basique", prestige: "✓ Hôtels -15%", vip: "✓ Restaurants -20%" },
                        { nom: "Surclassement prioritaire", adherent: "-", prestige: "Selon dispo", vip: "✓ Prioritaire" }
                    ] %}

                    {% for avantage in avantages_tableau %}
                    <div class="grid grid-cols-4">
                        <div class="p-6 bg-gray-50 flex items-center">
                            <span class="font-semibold text-gray-700">{{ avantage.nom }}</span>
                        </div>
                        <div class="p-6 border-l border-gray-200 text-center flex items-center justify-center">
                            <span class="text-lg font-bold {% if avantage.adherent != '-' and avantage.adherent != 'Standard' and avantage.adherent != 'Basique' %}text-secondary{% else %}text-gray-500{% endif %}">
                                {{ avantage.adherent }}
                            </span>
                        </div>
                        <div class="p-6 border-l border-gray-200 text-center flex items-center justify-center bg-primary/5">
                            <span class="text-lg font-bold {% if avantage.prestige != 'Selon dispo' and not avantage.prestige starts with '-' %}text-primary{% else %}text-gray-500{% endif %}">
                                {{ avantage.prestige }}
                            </span>
                        </div>
                        <div class="p-6 border-l border-gray-200 text-center flex items-center justify-center">
                            <span class="text-lg font-bold {% if avantage.vip != '-' %}text-yellow-500{% else %}text-gray-500{% endif %}">
                                {{ avantage.vip }}
                            </span>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Version Mobile - Cartes empilées -->
            <div class="md:hidden space-y-6">
                {% set formules = [
                    { 
                        nom: "Adhérent", 
                        prix: "5 000 FCFA", 
                        couleur: "green",
                        icon: 'M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4',
                        avantages: {
                            "Bonus sur les réservations": "-10%",
                            "Accès aux événements": "✓ Publics uniquement",
                            "Carte membre": "✓ Standard",
                            "Support client": "Standard",
                            "Arrivée/Départ flexible": "-",
                            "Accès partenaires": "Basique",
                            "Surclassement prioritaire": "-"

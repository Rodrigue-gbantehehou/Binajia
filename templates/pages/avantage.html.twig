                        couleur: "green",
                        icon: 'M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z',
                        avantages: {
                            "Bonus sur les réservations": "-25%",
                            "Accès aux événements": "✓ Accès VVIP festivals",
                            "Carte membre": "✓ VIP Métallique",
                            "Support client": "✓ Premium 24/7",
                            "Arrivée/Départ flexible": "Arrivée + Départ",
                            "Accès partenaires": "✓ Restaurants -20%",
                            "Surclassement prioritaire": "✓ Prioritaire"
                        }
                    }
                ] %}

                {% for formule in formules %}
                <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
                    <!-- En-tête de la carte -->
                    <div class="p-6 text-center bg-gradient-to-r from-{{ formule.couleur }}-50 to-{{ formule.couleur }}-100">
                        <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-4 shadow-md">
                            <svg class="w-8 h-8 text-{{ formule.couleur }}-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ formule.icon }}"/>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-800 mb-2">{{ formule.nom }}</h3>
                        <div class="text-3xl font-bold text-{{ formule.couleur }}-500 mb-1">{{ formule.prix }}</div>
                        <p class="text-sm text-gray-600">Par an</p>
                    </div>

                    <!-- Liste des avantages -->
                    <div class="p-6">
                        <h4 class="font-semibold text-gray-700 mb-4 text-lg">Avantages inclus :</h4>
                        <div class="space-y-3">
                            {% for avantage, valeur in formule.avantages %}
                            <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-b-0">
                                <span class="text-gray-600 text-sm flex-1">{{ avantage }}</span>
                                <span class="font-semibold text-{{ formule.couleur }}-500 text-sm ml-4 whitespace-nowrap">
                                    {{ valeur }}
                                </span>
                            </div>
                            {% endfor %}
                        </div>
                        
                        <!-- Bouton CTA -->
                        <div class="mt-6 pt-4 border-t border-gray-200">
                            <a href="{{ path('app_membership') }}" 

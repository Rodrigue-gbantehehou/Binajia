{% extends 'base.html.twig' %}
{% block title %}Contact â€” Binajia{% endblock %}
{% block content %}
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="font-serif text-4xl font-bold text-charcoal">Contactez-nous</h1>
    <p class="mt-4 text-gray-600 max-w-3xl">Pour toute question ou partenariat, envoyez-nous un message.</p>
    {# Flash messages #}
    {% for message in app.flashes('success') %}
      <div class="mt-6 p-4 rounded-xl bg-green-50 text-green-800 ring-1 ring-green-200">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
      <div class="mt-6 p-4 rounded-xl bg-red-50 text-red-800 ring-1 ring-red-200">{{ message }}</div>
    {% endfor %}
    <form class="mt-8 grid md:grid-cols-2 gap-6" action="{{ path('app_contact_submit') }}" method="post">
      <div>
        <label class="block text-sm text-gray-600 mb-1" for="name">Nom</label>
        <input type="text" id="name" name="name" class="w-full px-4 py-3 rounded-xl ring-1 ring-gray-300 focus:ring-2 focus:ring-primary focus:outline-none"/>
      </div>
      <div>
        <label class="block text-sm text-gray-600 mb-1" for="email">Email</label>
        <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-xl ring-1 ring-gray-300 focus:ring-2 focus:ring-primary focus:outline-none"/>
      </div>
      <div class="md:col-span-2">
        <label class="block text-sm text-gray-600 mb-1" for="message">Message</label>
        <textarea rows="5" id="message" name="message" class="w-full px-4 py-3 rounded-xl ring-1 ring-gray-300 focus:ring-2 focus:ring-primary focus:outline-none"></textarea>
      </div>
      <div class="md:col-span-2">
        <button class="btn-primary px-8 py-3">Envoyer</button>
      </div>
    </form>
  </div>
</section>
{% endblock %}

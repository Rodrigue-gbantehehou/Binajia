<div class="relative w-full max-w-md">
  <div class="absolute -inset-4 -z-10 bg-gradient-to-br from-primary/20 via-accent/20 to-secondary/20 blur-2xl rounded-3xl"></div>

  <div class="aspect-[86/54] rounded-2xl overflow-hidden ring-1 ring-white/40 bg-afric-motif">
    <div class="h-full w-full bg-charcoal/70 backdrop-blur">
      <div class="flex h-full p-5 text-white">
        <div class="flex-1 flex flex-col justify-between">
          <div>
            <div class="inline-flex items-center gap-2 px-2 py-1 rounded-md bg-white/10 ring-1 ring-white/20 text-xs">Binajia • Membre</div>
            <div class="mt-3 font-display text-2xl font-semibold">Carte de membre</div>
          </div>
          <div class="text-xs text-gray-200">
            <div>Adhésion: {{ user.joinedAt|date('d/m/Y') }}</div>
            <div>Pays: {{ user.country }}</div>
          </div>
        </div>
        <div class="w-28 flex flex-col items-center justify-between">
          <img src="{{ user.avatarUrl ?? 'https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=256&auto=format&fit=crop' }}" class="h-20 w-20 rounded-lg object-cover ring-2 ring-white/50" alt="">
          <div class="text-right">
            <div class="font-semibold text-sm">{{ user.firstName }} {{ user.lastName }}</div>
            <div class="text-[10px] text-gray-200">ID: {{ user.memberId }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

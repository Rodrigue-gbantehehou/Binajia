{% extends 'base.html.twig' %}
{% block title %}{{ projet.nom }} â€” Binajia{% endblock %}

{% block content %}

<section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
                <h1 class="text-4xl font-bold text-gray-900 mb-6">
                    {{ projet.nom }}
                </h1>
                <p class="text-lg text-gray-700 leading-relaxed">
                    {{ projet.description }}
                </p>
            </div>
            
            <div class="flex justify-center">
                {% if projet.logos %}
                    <img src="{{ asset('uploads/' ~ projet.logos) }}" 
                         alt="{{ projet.nom }}" 
                         class="max-w-full h-auto rounded-2xl shadow-lg">
                {% else %}
                    <div class="w-full h-64 bg-gray-100 rounded-2xl flex items-center justify-center">
                        <span class="text-gray-500">Logo non disponible</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{% endblock %}
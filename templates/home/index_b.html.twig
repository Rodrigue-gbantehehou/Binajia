{% extends 'base.html.twig' %}
{% block title %}Binajia — Cultures en mouvement{% endblock %}
{% block content %}
<section class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid md:grid-cols-2 gap-8 py-20 items-center">
    <div>
      <h1 class="font-display text-4xl sm:text-5xl font-semibold">Une scène culturelle moderne, ancrée dans l’authenticité</h1>
      <p class="mt-4 text-gray-600">Programmation contemporaine, patrimoine vivant, collaborations transfrontalières.</p>
      <div class="mt-6 flex gap-3">
        <a href="#events" class="px-5 py-3 rounded-md bg-primary text-white">Explorer</a>
        <a href="#membership" class="px-5 py-3 rounded-md ring-1 ring-gray-300 hover:bg-gray-50">Adhérer</a>
      </div>
    </div>
    <div class="rounded-2xl overflow-hidden ring-1 ring-gray-200">
      <div class="w-full h-96 bg-[url('/media/hero-split.jpg')] bg-cover"></div>
    </div>
  </div>
</section>

<section class="py-16 bg-neutral-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h3 class="font-display text-2xl font-semibold">Récits & trajectoires</h3>
    <ol class="mt-8 relative border-s border-gray-200 pl-6 space-y-8">
      {% for story in stories %}
      <li>
        <div class="absolute -left-1.5 mt-1 h-3 w-3 rounded-full bg-primary"></div>
        <h4 class="font-semibold">{{ story.title }}</h4>
        <p class="text-sm text-gray-600 mt-1">{{ story.excerpt }}</p>
        <a href="#" class="text-sm text-primary mt-2 inline-block">Lire</a>
      </li>
      {% endfor %}
    </ol>
  </div>
</section>
{% endblock %}

    <div class="mt-10 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for p in projects %}
      <div class="group rounded-2xl ring-1 ring-gray-200 bg-white p-6 hover:shadow-lg transition overflow-hidden">
        <div class="mb-3">
          <img src="{{ p.img }}" alt="Logo {{ p.title }}" class="w-16 h-16 object-contain rounded-xl bg-white">
        </div>
        <h3 class="font-semibold text-lg text-charcoal">{{ p.title }}</h3>
        <p class="mt-2 text-sm text-gray-600">{{ p.desc }}</p>
        <div class="mt-4">
          <a href="#" class="text-primary font-semibold inline-flex items-center">En savoir plus <span class="ml-1">→</span></a>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{# Testimonials #}
<section class="py-16 relative overflow-hidden bg-cream">
  <div class="absolute inset-0 -z-10 bg-cover bg-center opacity-10" style="background-image:url('{{ asset('/media/cv.jpg') }}')"></div>
  <div class="absolute inset-0 -z-10 pattern-african opacity-10"></div>
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="font-serif text-3xl font-bold text-charcoal">Ils en parlent</h2>

    <div class="relative mt-8">
      <button id="testimonials-prev" type="button" aria-label="Précédent" class="hidden md:flex absolute -left-3 top-1/2 -translate-y-1/2 z-10 w-10 h-10 rounded-full bg-white ring-1 ring-gray-200 shadow hover:bg-cream items-center justify-center">‹</button>
      <button id="testimonials-next" type="button" aria-label="Suivant" class="hidden md:flex absolute -right-3 top-1/2 -translate-y-1/2 z-10 w-10 h-10 rounded-full bg-white ring-1 ring-gray-200 shadow hover:bg-cream items-center justify-center">›</button>

      {% set testimonials = [
        { q:'Une vraie passerelle entre cultures voisines.', a:'Nadège, Cotonou', img: asset('/media/testimonial-1.jpg') },
        { q:'Des événements de qualité, une communauté chaleureuse.', a:'Tunde, Lagos', img: asset('/media/testimonial-2.jpg') },
        { q:'Fier de faire partie du mouvement.', a:'Sonia, Paris', img: asset('/media/testimonial-3.jpg') }
      ] %}

      <div id="testimonials-slider" class="flex gap-6 overflow-x-auto snap-x snap-mandatory no-scrollbar scroll-px-4">
        {% for t in testimonials %}
        <article class="snap-start shrink-0 w-[28rem] md:w-[32rem] rounded-2xl overflow-hidden bg-white ring-1 ring-gray-200 p-6">
          <div class="flex items-center gap-4">
            <img src="{{ t.img }}" alt="Photo de {{ t.a }}" class="w-12 h-12 rounded-full object-cover ring-2 ring-primary/10">
            <div>
              <div class="text-sm font-semibold text-charcoal">{{ t.a }}</div>
              <div class="text-xs text-gray-500">Membre de la communauté</div>
            </div>
          </div>
          <p class="mt-4 text-charcoal">“{{ t.q }}”</p>
        </article>
        {% endfor %}
      </div>
      <div class="mt-6 flex items-center justify-center gap-2" id="testimonials-dots" aria-label="Pagination des témoignages"></div>
    </div>
  </div>
  </section>



{# CTA #}
<section id="adhesion" class="py-16 relative overflow-hidden">
  <div class="absolute inset-0 gradient-hero opacity-90"></div>
  <div class="absolute inset-0 pattern-african"></div>
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
    <h2 class="font-serif text-4xl font-bold">Rejoignez la communauté Binajia</h2>
    <p class="mt-3 text-white/90 max-w-3xl mx-auto">Accédez à des événements exclusifs, des réductions et un réseau transfrontalier.</p>
    <div class="mt-8 flex gap-4 justify-center">
      <a href="{{ path('app_membership') }}" class="px-8 py-4 bg-white text-primary rounded-full font-semibold">Adhérer maintenant</a>
      <a href="#evenements" class="px-8 py-4 border-2 border-white/60 text-white rounded-full font-semibold">Découvrir nos événements</a>
    </div>
  </div>
</section>

{# Newsletter #}
<section class="py-16 bg-white">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="font-serif text-3xl font-bold text-charcoal">Restez informé</h2>
